<div class="reward-block text-center">
  <img class="img-responsive reward-block__image" src="<%= get_reward_image_for_status(reward["level"]) %>" alt="<%= reward["level"].title %>">
  <h4 class="reward-block__title"><%= reward["level"].title %></h4>
  <p class="reward-block__subtitle"><%= reward["level"].short_description %></p>
  <% if reward["status"] == "progress" %>
    <div class="progress" style="margin: 10px auto; height: 12px; width: 65%;">
    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: <%= reward["progress"] %>%;"></div>
    </div>
  <% elsif reward["status"] == "gained" %>
      <div class="progress" style="margin: 10px auto; height: 12px; width: 65%;">
    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
    </div>
  <% else %>
      <div class="progress" style="margin: 10px auto; height: 12px; width: 65%;">
    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
    </div>
  <% end %>
</div>
