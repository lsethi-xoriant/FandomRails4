<style>
	body{
		border: none;
		margin: 0;
	}
	.notice__reward-image{
		max-width: 65px;
	}
	body, *, .notices-list > * {
		font-family: Helvetica !important;
	}
	.notice__title,
	.notice__title b {
		font-weight: 300 !important	;
	}
	.hidden-xs {
		display: none !important;
	}
	.notice__reward-image {
	    max-width: 80px;
	    margin: 0 auto;
	}
	
</style>
<div class="container container--default" style="background-color: #fff; border: none;">
  <div class="row">
    <div class="col-md-12">
      
      <div class="row section-heading" style="background-color:<%= bg_color %>; padding: 0;">
        <div class="col-xs-12">
          <h3 class="text-center">
            <span class="glyphicon glyphicon-bell" aria-hidden="true" style="color: #fff; font-size: 28px;"></span>
          </h3>
          <h3 style="color: #fff; text-align: center; margin-top:0px;">Notifiche</h3>
        </div>
      </div>
      
      <div class="row">
        <div class="col-xs-12">

          <% notices_list.each do |notice| %>  
            <div class="row" style="border-bottom: 1px solid #eff0f1; padding: 5px 0;">
              <div class="col-xs-12 notices-list">
              	<%= notice[:notice].html_notice.html_safe %>
              </div>
            </div>
          <% end %> 
           
          </div>
        </div>
        
      </div>
      
    </div>
</div>

