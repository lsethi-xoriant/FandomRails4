<div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1><%= "#{ranking.title} dei #{ranking.reward.title}" %></h1>
      </div>
      <ul class="list-group">
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-2 col-xs-2 text-right"><h4 class="no-margin"><%= rank_list["first"]["position"]%></h4></div>
              <div class="col-sm-2 hidden-xs"><img src="<%= rank_list["first"]["avatar"] %>" class="img-circle img-responsive"></div>
              <div class="col-sm-5 col-xs-7"><h4><%= rank_list["first"]["user"] %></h4></div>
              <div class="col-sm-3 col-xs-3 text-right"><h4 class="no-margin"><%= rank_list["first"]["counter"] %></h4></div>
            </div>
          </li>
          <li class="list-group-item">
            <div class="row">
              .<br />.<br />.<br />
            </div>
          </li>
          <li ng-repeat="rank in rankings" class="list-group-item list-group-item-warning">
            <div class="row">
              <div class="col-sm-2 col-xs-2 text-right"><h4 class="no-margin"><%= rank_list["me"]["position"]%></h4></div>
              <div class="col-sm-2 hidden-xs"><img src="<%= rank_list["me"]["avatar"] %>" class="img-circle img-responsive"></div>
              <div class="col-sm-5 col-xs-7"><h4><%= rank_list["me"]["user"] %></h4></div>
              <div class="col-sm-3 col-xs-3 text-right"><h4 class="no-margin"><%= rank_list["me"]["counter"] %></h4></div>
            </div>
          </li>
          <li class="list-group-item">
            <div class="row">
              .<br />.<br />.<br />
            </div>
          </li>
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-2 col-xs-2 text-right"><h4 class="no-margin"><%= rank_list["last"]["position"]%></h4></div>
              <div class="col-sm-2 hidden-xs"><img src="<%= rank_list["last"]["avatar"] %>" class="img-circle img-responsive"></div>
              <div class="col-sm-5 col-xs-7"><h4><%= rank_list["last"]["user"] %></h4></div>
              <div class="col-sm-3 col-xs-3 text-right"><h4 class="no-margin"><%= rank_list["last"]["counter"] %></h4></div>
            </div>
          </li>
      </ul>
    </div>
</div>