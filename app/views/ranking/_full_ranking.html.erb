<div class="row" ng-controller="RankingCtrl" ng-init="init(<%= @ranking %>, <%= @total %>, <%= @rank_list.to_json %>)">
    <div class="col-md-12">
      <div class="page-header">
        <h1>{{rank.title}}</h1>
      </div>
      
      <h3>{{rank.type}}</h3>
      <ul class="list-group">
          <li ng-repeat="rank in rankings" ng-class="{list-group-item: true, list-group-item-warning: }" class="list-group-item <%= "list-group-item-warning" if current_user && rank.user.id == current_user.id %>">
            <div class="row">
              <div class="col-sm-2 col-xs-2 text-right"><h4 class="no-margin">{{rank.position}}</h4></div>
              <div class="col-sm-2 hidden-xs"><img ng-src="{{rank.avatar}}" class="img-circle img-responsive"></div>
              <div class="col-sm-5 col-xs-7"><h4>{{rank.user}}</h4></div>
              <div class="col-sm-3 col-xs-3 text-right"><h4 class="no-margin">{{rank.counter}}</h4></div>
            </div>
          </li>
      </ul>
      <button ng-disabled="currentPage == 0" ng-click="currentPage=currentPage-1">Previous</button>
      {{currentPage+1}}/{{numberOfPages()}}
      <button ng-disabled="currentPage >= total_page" ng-click="currentPage=currentPage+1">Next</button>
    </div>
</div>