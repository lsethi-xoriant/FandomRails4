<div ng-class="{'row': <%= rankings %>.rank_type == 'full', 'col-sm-6': <%= rankings %>.rank_type != 'full'}">
		

    <div class="col-md-12" ng-if="<%= rankings %>.rank_type == 'full'">
      <div class="page-header">
        <h1>{{<%= rankings %>.ranking.title}}</h1>
      </div>
      
      <ul class="list-group">
          <li ng-repeat="rank_user in <%= rankings %>.rank_list" ng-class="{'list-group-item': true, 'list-group-item-warning': rank_user.position == <%= rankings %>.my_position }">
            <div class="row">
              <div class="col-sm-2 col-xs-2 text-right"><h4 class="no-margin">{{rank_user.position}}</h4></div>
              <div class="col-sm-2 hidden-xs"><img ng-src="{{rank_user.avatar}}" class="img-circle img-responsive"></div>
              <div class="col-sm-5 col-xs-7"><h4>{{rank_user.user}}</h4></div>
              <div class="col-sm-3 col-xs-3 text-right"><h4 class="no-margin">{{rank_user.counter}}</h4></div>
            </div>
          </li>
      </ul>
      <button ng-disabled="currentPage == 1" ng-click="perv_page(<%= rankings %>.current_page, <%= rankings %>)">Previous</button>
      {{<%= rankings %>.current_page}}/{{<%= rankings %>.number_of_pages}}
      <button ng-disabled="currentPage >= total_page" ng-click="next_page(<%= rankings %>.current_page, <%= rankings %>)">Next</button>
    </div>
    
    <div class="col-sm-12" ng-if="<%= rankings %>.rank_type == 'my_position'">
      <div class="page-header">
        <h1>{{<%= rankings %>.ranking.title}}</h1>
      </div>

      <ul class="list-group">
          <li ng-repeat="rank_user in <%= rankings %>.rank_list" ng-class="{'list-group-item': true, 'list-group-item-warning': rank_user.position == <%= rankings %>.my_position }" >
            <div class="row">
              <div class="col-sm-2 col-xs-2 text-right"><h4 class="no-margin">{{rank_user.position}}</h4></div>
              <div class="col-sm-2 hidden-xs"><img ng-src="{{rank_user.avatar}}" class="img-circle img-responsive"></div>
              <div class="col-sm-5 col-xs-7"><h4>{{rank_user.user}}</h4></div>
              <div class="col-sm-3 col-xs-3 text-right"><h4 class="no-margin">{{rank_user.counter}}</h4></div>
            </div>
          </li>
      </ul>
    </div>

</div>