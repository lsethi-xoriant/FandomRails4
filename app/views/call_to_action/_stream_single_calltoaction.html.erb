<div class="row">      
  <div class="col-lg-8 col-lg-offset-2 col-sm-10 col-sm-offset-1">
    <div class="panel panel-default">

      <div class="panel-heading">
        <div class="row">
          <!-- MINIFORMAT -->
          <div ng-if="calltoaction_info.miniformat" class="col-md-8 col-xs-8">
            <h5>
              <span class="label label-default" style="background-color: {{calltoaction_info.miniformat.label_background}}; color: {{calltoaction_info.miniformat.label_color}; padding: 7px; font-size: 90%;">
                <span class="{{calltoaction.miniformat.icon}}"></span>
                {{calltoaction_info.miniformat.title}}
              </span>
            </h5>  
          </div>
          <!-- CALLTOACTION WINNABLE REWARD COUNT -->
          <div ng-if="calltoaction_info.status" class="col-md-4 col-xs-4">
            <h4>
              <span id="head-feedback-calltoaction-{{calltoaction_info.calltoaction.id}}" class="label label-warning">
                +{{calltoaction_info.status.winnable_reward_count}}<span class="glyphicon glyphicon-star">
              </span>  
            </h4>
          </div>
          <!-- CALLTOACTION DONE -->
          <div ng-if="!calltoaction_info.status" class="col-md-4 col-xs-4">
            <h4>
              <span id="head-feedback-calltoaction-{{calltoaction_info.calltoaction.id}}" class="label label-success">
                FATTO <span class="glyphicon glyphicon-ok">
              </span>  
            </h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 text-left">
            <h2>{{calltoaction_info.calltoaction.title}}</h2>
          </div>
        </div>
      </div>
        
      <div class="panel-body">  
        <%= render partial: "/call_to_action/stream_single_calltoaction_media" %>
        <!-- RIGHT COLUMN WITH NAME AND DESCRIPTION -->
        <%= render partial: "/call_to_action/stream_single_calltoaction_interactions" %>
      </div>  
    </div>        
  </div>
</div>
       