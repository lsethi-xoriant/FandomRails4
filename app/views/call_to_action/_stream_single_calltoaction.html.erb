<div class="row cta">      
  <div class="col-lg-8 col-lg-offset-2 col-sm-10 col-sm-offset-1">
    <div class="panel panel-default cta-page no-pad">
      <div class="panel-body cta-panel no-pad">

      <div class="row" id="cta-id-<%= calltoaction.id %>">
        <div class="col-md-12 text-center" style="padding: 0 30px 0 30px;">
          <h2><%= calltoaction.title %></h2>
        </div>
      </div>

        <!-- MEDIA -->
        <div class="row">
          <div class="col-md-12">
            <% if calltoaction.media_type == "VIDEO" %>
                <div class="video flex-video widescreen" style="background:#222;">             
                	<!-- IFRAME VIDEO -->
                  <div id="home-stream-video-<%= calltoaction.id %>" main-calltoaction-id="<%= calltoaction.id %>" secondary-calltoaction-id="<%= calltoaction.id %>" interaction-play-id="<%= find_interaction_for_calltoaction_by_resource_type(calltoaction, "Play").id %>"></div>
                  <!-- OVERVIDEO AREA -->
                  <div id="home-overvideo-<%= calltoaction.id %>"></div>                 
                  <!-- OVERVIDEO TITLE -->
                  <div id="home-overvideo-title-<%= calltoaction.id %>"><%= render partial: "/call_to_action/overvideo_video_home", locals: { calltoaction: calltoaction } %></div>
                  <!-- OVERVIDEO FEEDBACK -->
                  <div id="home-overvideo-feedback-<%= calltoaction.id %>"></div>
                </div>
            <% elsif calltoaction.media_type == "IMAGE" %>
            	<!-- IMAGE -->
              <img src="<%= calltoaction.image %>" style="width: 100%; margin-bottom: 15px;">
            <% elsif calltoaction.media_type == "IFRAME" %>
              <div class="video flex-video widescreen" style="background:#222;">  
                <%= calltoaction.iframe.html_safe %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- UNDERVIDEO AREA -->
        <div class="row">

          <% if calltoaction.description.present? %>
	          <div class="col-md-12 text-left" style="padding: 0 30px 0 30px;">
	            <h4><%= calltoaction.description %></h4>
	          </div>
          <% end %>

          <div class="col-xs-12">
            <%= render partial: "/call_to_action/undervideo_interactions", locals: { calltoaction: calltoaction } %>
          </div>

          <div class="col-sm-12 text-center" id="home-undervideo-<%= calltoaction.id %>">
            <!-- UNDERVIDEO FEEDBACK -->               
          </div>

          <div class="col-md-12" id="share-footer-<%= calltoaction.id %>">
            <!-- SHARE FOOTER -->
          </div>
        </div>
      </div>         
      <div class="panel-footer">
        <div class="row">
          <div class="col-xs-12 text-center">
          	<div class="row">
          		<!--
                <div class="col-xs-3 col-xs-offset-3">
                  <button type="button" class="btn btn-default btn-xs btn-block" data-toggle="modal" data-target="#facebook-like-modal"><span class="glyphicon glyphicon-thumbs-up"> <span class="hidden-xs">Like</span></span></button>
                </div>
               -->
                <div class="col-xs-4 col-xs-offset-4">
                  <button type="button" class="btn btn-default btn-xs btn-block" data-toggle="modal" data-target="#facebook-share-modal"><span class="glyphicon glyphicon-share"> <span class="hidden-xs">Share</span></span></button>
                </div>
                
              </div>
            <!--<a class="btn btn-default" href="/call_to_action/<%= calltoaction.id %>">ENTRA</a>-->
          </div>
        </div>
      </div>
    </div>        
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="facebook-like-modal" tabindex="-1" role="dialog" aria-labelledby="facebookModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Like su Facebook</h4>
      </div>
      <div class="modal-body">
       <p>Per effettuare il like devi essere collegato a Facebook</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="facebook-share-modal" tabindex="-1" role="dialog" aria-labelledby="facebookModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Sahre su Facebook</h4>
      </div>
      <div class="modal-body">
       <p>Per effettuare la condivisione devi essere collegato a Facebook</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
