<div class="row cta">      
  <div class="col-lg-8 col-lg-offset-2 col-sm-10 col-sm-offset-1">
    <div class="panel panel-default cta-page">

      <div class="panel-heading" style="background: none">
        <div class="row" id="cta-id-<%= calltoaction.id %>">
          <div class="col-md-8 col-xs-8">
            <% tags_with_miniformat_in_calltoaction = get_tag_with_tag_about_call_to_action(calltoaction, "miniformat") %>
            <% if tags_with_miniformat_in_calltoaction.any? %>
              <h5 class="text-muted">
                <span class="<%= tags_with_miniformat_in_calltoaction.first.tag_fields.find_by_name("icon").try(:value) %>"></span>
                <%= tags_with_miniformat_in_calltoaction.first.name %>
              </h5>
            <% end %>
          </div>
          <div class="col-md-4 col-xs-4 text-right">
            <h4>
              <% if call_to_action_completed?(calltoaction, current_user_or_anonymous_user) %>
                <span id="head-feedback-calltoaction-<%= calltoaction.id %>" class="label label-success" style="padding-top: 7px;">
                  FATTO <span class="glyphicon glyphicon-ok"></span>
                </span>
              <% else %>
                <span id="head-feedback-calltoaction-<%= calltoaction.id %>" class="label label-warning" style="padding-top: 7px;">+<%= predict_max_cta_outcome(calltoaction, anonymous_user).reward_name_to_counter["POINT"] %>
                  <span class="glyphicon glyphicon-star"></span>
                </span>
              <% end %>
            </h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 text-left">
            <h2><%= calltoaction.title %></h2>
          </div>
        </div>
      </div>

      <div class="panel-body cta-panel no-pad">

        <!-- MEDIA -->
        <div class="row">
          <div class="col-md-12">
            <% if calltoaction.media_type == "VIDEO" %>
                <div class="video flex-video widescreen" style="background:#222;">             
                	<!-- IFRAME VIDEO -->
                  <div id="home-stream-video-<%= calltoaction.id %>" main-calltoaction-id="<%= calltoaction.id %>" secondary-calltoaction-id="<%= calltoaction.id %>" interaction-play-id="<%= find_interaction_for_calltoaction_by_resource_type(calltoaction, "Play").id %>"></div>
                  <!-- OVERVIDEO AREA -->
                  <div id="home-overvideo-<%= calltoaction.id %>"></div>                 
                  <!-- OVERVIDEO TITLE -->
                  <div id="home-overvideo-title-<%= calltoaction.id %>"><%= render partial: "/call_to_action/overvideo_video_home", locals: { calltoaction: calltoaction } %></div>
                  <!-- OVERVIDEO FEEDBACK -->
                  <div id="home-overvideo-feedback-<%= calltoaction.id %>"></div>
                </div>
            <% elsif calltoaction.media_type == "IMAGE" %>
            	<!-- IMAGE -->
              <img src="<%= calltoaction.image %>" style="width: 100%; margin-bottom: 15px;">
            <% elsif calltoaction.media_type == "IFRAME" %>
              <div class="<%= "iframe-iphone" if request_is_from_iphone_device?(request) %> video flex-video widescreen text-center" style="background:#222; margin-bottom: 15px;">  
                <%= calltoaction.iframe.html_safe %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- UNDERVIDEO AREA -->
        <div class="row">
          <div class="col-xs-12">
            <%= render partial: "/call_to_action/undervideo_interactions", locals: { calltoaction: calltoaction, outcome: nil } %>
          </div>

          <div class="col-sm-12 text-center" id="home-undervideo-<%= calltoaction.id %>">
            <!-- UNDERVIDEO FEEDBACK -->               
          </div>

          <div class="col-md-12" id="share-footer-<%= calltoaction.id %>">
            <!-- SHARE FOOTER -->
          </div>
        </div>
      </div>         
      <div class="panel-footer">
        <div class="row">
          <div class="col-xs-12 text-center">
          	<div class="row">
          		  <!--
                <div class="col-xs-3 col-xs-offset-3">
                  <button type="button" class="btn btn-default btn-xs btn-block" data-toggle="modal" data-target="#facebook-like-modal"><span class="glyphicon glyphicon-thumbs-up"> <span class="hidden-xs">Like</span></span></button>
                </div>
               -->
                <div class="col-xs-4 col-xs-offset-4">
                  <button type="button" class="btn btn-default btn-xs btn-block" data-toggle="modal" data-target="#facebook-share-modal"><span class="glyphicon glyphicon-share"> <span class="hidden-xs">Condividi</span></span></button>
                </div>
                
              </div>
            <!--<a class="btn btn-default" href="/call_to_action/<%= calltoaction.id %>">ENTRA</a>-->
          </div>
        </div>
      </div>
    </div>        
  </div>
</div>

<% if request_is_from_iphone_device?(request) %>

  <script type="text/javascript">

    $(document).ready(function() {
      iframe_height = $(".iframe-iphone").innerHeight();
      iframe_width = $(".iframe-iphone").innerWidth();
      $(".iframe-iphone iframe").css("height", iframe_height);
      $(".iframe-iphone iframe").css("width", iframe_width);
    });

  </script>

<% end %>
