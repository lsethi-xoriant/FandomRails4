<div class="row cta">      
  <div class="col-lg-8 col-lg-offset-2 col-sm-10 col-sm-offset-1">
    <div class="panel panel-default cta-page">

      <div class="panel-heading" style="background: none">
        <div class="row" id="cta-id-<%= calltoaction.id %>">
          <div class="col-md-8 col-xs-8">
            <h5>
              <% tags_with_miniformat_in_calltoaction = get_tag_with_tag_about_call_to_action(calltoaction, "miniformat") %>
              <% if tags_with_miniformat_in_calltoaction.any? %>
                <span class="label label-default" style="background-color: <%= tags_with_miniformat_in_calltoaction.first.tag_fields.select { |tf| tf.name == "label-background" }.map { |tf| tf.value }.first %>; color: <%= tags_with_miniformat_in_calltoaction.first.tag_fields.select { |tf| tf.name == "label-color" }.map { |tf| tf.value }.first %>; padding: 7px; font-size: 90%;">
                  <span class="<%= tags_with_miniformat_in_calltoaction.first.tag_fields.select { |tf| tf.name == "icon" }.map { |tf| tf.value }.first %>"></span>
                  <%= tags_with_miniformat_in_calltoaction.first.tag_fields.select { |tf| tf.name == "title" }.map { |tf| tf.value }.first %>
                </span>
              <% else %>
                &nbsp;
              <% end %>
            </h5>  
          </div>
          <div class="col-md-4 col-xs-4 text-right">
            <h4>
              <% current_call_to_action_reward_status = compute_call_to_action_completed_or_reward_status(MAIN_REWARD_NAME, calltoaction) %>
              <% if current_call_to_action_reward_status.present? %>
                <% if current_call_to_action_reward_status["winnable_reward_count"] > 0 %>
                  <span id="head-feedback-calltoaction-<%= calltoaction.id %>" class="label label-warning" style="padding-top: 5px;">+<%= current_call_to_action_reward_status["winnable_reward_count"] %>
                    <span class="glyphicon glyphicon-star"></span>
                  </span>
                <% end %>
              <% else %>        
                <span id="head-feedback-calltoaction-<%= calltoaction.id %>" class="label label-success" style="padding-top: 5px;">
                  FATTO <span class="glyphicon glyphicon-ok"></span>
                </span>
              <% end %>
            </h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 text-left">
            <h2><%= calltoaction.title %></h2>
          </div>
        </div>
      </div>
  
      <div class="panel-body cta-panel no-pad">  
        <%= render partial: "/call_to_action/stream_single_calltoaction_media", locals: { calltoaction: calltoaction, calltoaction_page: (active_calltoaction_id == calltoaction.id), aux: aux } %>
        <!-- RIGHT COLUMN WITH NAME AND DESCRIPTION -->
        <%= render partial: "/call_to_action/stream_single_calltoaction_interactions", locals: { calltoaction: calltoaction,calltoaction_active_interaction: calltoaction_active_interaction, aux: aux } %>
      </div>  
       
      <% user_interaction, interaction = has_done_share_interaction(calltoaction) %>
      <% if interaction || (!active_calltoaction_id && calltoaction_comment_interaction && !calltoaction_comment_interaction.empty?) %>
        <div class="panel-footer">
          <div class="row">
            <div class="col-xs-7 col-sm-3" id="bottom-feedback-share-<%= calltoaction.id %>">       
              <% if interaction %>
                <% if user_interaction %>
                  <button type="button" class="btn btn-default" onclick="doFbShare(<%= calltoaction.id %>, <%= interaction.id %>);" style="width: 30px; height: 30px; margin-right: 2px;">
                    <i class="fa fa-facebook" style="font-size: 14px;"></i>
                  </button>
                  <button class="btn btn-default" onclick="doTwShare(<%= calltoaction.id %>, <%= interaction.id %>, '<%=j get_twitter_title_for_share(calltoaction) %>');" style="width: 30px; height: 30px; margin-right: 2px;">
                    <i class="fa fa-twitter" style="font-size: 14px;"></i>
                  </button>
                  <span id="feedback-label-share" class="label label-success" style="padding-top: 3px;margin-top: 5px;">Fatto <span class="glyphicon glyphicon-ok"></span></span>
                <% else %>
                  <button type="button" class="btn btn-default" onclick="doFbShare(<%= calltoaction.id %>, <%= interaction.id %>);" style="width: 30px; height: 30px; margin-right: 2px;">
                    <i class="fa fa-facebook" style="font-size: 14px;"></i>
                  </button>
                  <button class="btn btn-default" onclick="doTwShare(<%= calltoaction.id %>, <%= interaction.id %>, '<%=j get_twitter_title_for_share(calltoaction) %>');" style="width: 30px; height: 30px; margin-right: 2px;">
                    <i class="fa fa-twitter" style="font-size: 14px;"></i>
                  </button>
                  <span id="feedback-label-share" class="label label-warning" style="padding-top: 3px;margin-top: 5px;">+3 <span class="glyphicon glyphicon-star"></span></span>
                <% end %>
              <% end %>
            </div> 
            <div class="col-xs-5 col-sm-3 col-sm-offset-6 text-right">
              <h6 style="display: inline-block; margin-top: 12px;"><%= get_cta_date(calltoaction.activated_at) %></h6>
              <% if calltoaction_comment_interaction && !calltoaction_comment_interaction.empty? %>
                <!--a href="/call_to_action/<%= calltoaction.id %>" class="comment-preview"><span class="glyphicon glyphicon-comment"></span> <span id="interaction-<%= calltoaction_comment_interaction[:interaction].id %>-comment-counter"><%= calltoaction_comment_interaction[:comments_count] %></span> commenti</a-->
              <% end %>           
            </div>
          </div>
        </div>
      <% end %>

      <% if calltoaction_comment_interaction && !calltoaction_comment_interaction.empty? %>
        <% if active_calltoaction_id && active_calltoaction_id == calltoaction.id  %>
          <hr class="no-margin">
          <div class="panel-footer">
            <%= render partial: "/call_to_action/stream_comment_with_form", locals: { calltoaction_comment_interaction: calltoaction_comment_interaction, comment_interaction: calltoaction_comment_interaction[:interaction] } %>
          </div> 
        <% else %>
          <%= render partial: "/call_to_action/stream_comment_without_form", locals: { calltoaction_comment_interaction: calltoaction_comment_interaction, comment_interaction: calltoaction_comment_interaction[:interaction], calltoaction_id: calltoaction.id } %>
        <% end %>
      <% end %>


    </div>        
  </div>
</div>
