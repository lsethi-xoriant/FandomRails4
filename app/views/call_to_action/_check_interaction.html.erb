<div class="row" style="margin-bottom: 15px; margin-top: 15px;">
  <div class="col-sm-10 col-sm-offset-1" style="padding: 0 30px;">
    <p style="font-size: 16px;">{{interaction.interaction.resource.resource.description}}</p>
  </div>

  <div ng-if="interaction.user_interaction">
    <!-- CURRENT USER HAS ALREADY RESPONDED -->
    <div class="col-xs-6 col-xs-offset-3 text-center">
      <button class="btn btn-primary btn-lg disabled">{{interaction.interaction.resource.resource.title}}</button>
    </div>
  <div ng-if="!interaction.user_interaction">
  </div>
    <!-- CURRENT USER HAS NOT RESPONDED -->
    <div class="col-xs-6 col-xs-offset-3 text-center">
      <a class="button-inter-{{interaction.interaction.id}} btn btn-lg btn-primary" ng-click="updateAnswer(interaction.interaction.call_to_action.id, interaction.interaction.id, interaction.interaction.resource.answer.id, interaction.interaction.when_show_interaction)">{{interaction.interaction.resource.resource.title}}</a>
    </div>
  </div>
</div>

<div class="row">
  <%# if current_user %>
    <%# if outcome && outcome.reward_name_to_counter[MAIN_REWARD_NAME] && outcome.reward_name_to_counter[MAIN_REWARD_NAME] > 0 %>       
      <div class="col-sm-10 col-sm-offset-1 text-center">
        <div class="alert alert-success" style="margin-bottom: 0; margin-top: 15px;">
        <strong>Bravo!</strong> Hai guadagnato +<%#= outcome.reward_name_to_counter[MAIN_REWARD_NAME] %> punti.
        </div>
      </div> 
    <%# end %>
  <%# end %>
</div>