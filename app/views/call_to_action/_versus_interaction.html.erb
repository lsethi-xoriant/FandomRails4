<div class="col-sm-8 col-sm-offset-2 text-center">
  <h3>
    <%= interaction.resource.question %>
  </h3>
</div>

<div class="col-sm-2 text-center">
    <% if current_user && current_user.user_interactions.find_by_interaction_id(interaction.id) %>
      <div id="marker-<%= interaction.id %>" class="yellow-marker active"><span class="glyphicon glyphicon-ok"></span></div>
    <% else %>
      <div id="marker-<%= interaction.id %>" class="yellow-marker">+<%= predict_outcome(interaction, current_user_or_anonymous_user, true).reward_name_to_counter["POINT"] %></div>
    <% end %>
  </h3>
</div>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1 text-center">
    <div class="row vs-ixd vs-ixd-x">
      <% interaction.resource.answers.each do |answer|%>
        <%= render partial: "/call_to_action/versus_answer", locals: { user_interaction: user_interaction, interaction: interaction, answer: answer } %>
      <% end %>
    </div>
  </div>
  <div class="col-md-1 col-xs-1 text-center"></div>
</div>