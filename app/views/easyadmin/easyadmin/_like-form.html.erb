<div class="panel panel-default">
	<% if f.object.id %>
		<div class="panel-heading">&nbsp;</div>
	<% else %>
		<div class="panel-heading">&nbsp; 
			<p style="float: right"><%= link_to_remove_like_fields "rimuovi" %></p>
		</div>
	<% end %>
	<div class="panel-body" style="padding-bottom: 0px;">
		<%= f.hidden_field :resource_type, :class => "form-control" %>

		<%= f.fields_for :resource do |quizform| %>
			 <%= quizform.hidden_field :title, :class => "form-control" %>
			<div class="col-lg-12">
				<div class="row">
					<div class="col-lg-12">
						<div class="form-group">
						  <label class="text-input">Punti</label>
						   <%= f.text_field :points, :class => "form-control" %>
						</div>
					</div>
				</div>
			</div>

		<% end %>
  	</div>
</div>