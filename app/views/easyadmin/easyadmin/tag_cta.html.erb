<%= render partial: "/easyadmin/easyadmin/left_bar", locals: { page: "calltoaction" } %>
    
<div id="content">    

  <div id="content-header">
    <h1>ASSEGNA TAG</h1>
  </div> <!-- #content-header --> 

  <div id="content-container">

    <div class="row">
      <div class="col-md-12"> 
        <% if flash[:notice] %>
          <div class="row">
            <div class="col-lg-12">
              <div class="alert alert-success"><%= flash[:notice] %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <%= form_tag action: "tag_cta_update" do |f| %>

      <div class="row">
        <div class="col-sm-6">
            <h4 class="heading_a">Tagga</h4>
            <%= text_field_tag :tag_list, @tag_list, { id: "s2_tokenization", class: "form-control" } %>
            <span class="help-block">Per separare i TAG digita virgola</span>
        </div>
      </div>

      <div class="row text-center">
        <div class="col-sm12">
          <button type="submit" class="btn btn-primary btn-lg">ASSEGNA</button>
        </div>
      </div>     
    <% end %>
  </div>
</div>

<script type="text/javascript">
  tl = <%= raw(Tag.select("text").map(&:text).to_json) %>;
  $(document).ready(function() {
    $('#s2_tokenization').select2({
      placeholder: "",
      tags: tl,
      tokenSeparators: [","]
    })
  })
</script>