<%= render partial: "/easyadmin/easyadmin/left_bar", locals: { page: "contest" } %>
 
  <div id="content">    
    
    <div id="content-header">
      <h1>Elenco PERIODICITY</h1>
    </div> <!-- #content-header --> 

    	<div id="content-container">

    	<% if flash[:notice] %>
	    	<div class="row">
		      <div class="col-md-12">         
		          <div class="row">
		            <div class="col-lg-12">
		              <div class="alert alert-success"><%= flash[:notice] %></div>
		            </div>
		          </div>
		        
		      </div>
		    </div>
	    <% end %>

	    <div class="row text-right">
	    	<div class="col-md-12">
	    		<a href="/easyadmin/periodicity/new"><button type="button" class="btn btn-primary">NUOVA</button></a>
	    	</div>
	    </div>

		<div class="row">
			<div class="col-md-12"> 
				<table class="table table-striped">
					<tr>
						<th>Nome</th>
						<th>Periodicit√† (giorni)</th>
						<th>Azioni</th>
					</tr>
					<% @periodicity_list.each do |p| %>
						<tr>
							<td><%= p.name %></td>
							<td><%= p.period %></td>
							<td>
								<a href="/easyadmin/periodicity/show/<%= p.id %>"><i class="fa fa-info" style="color: red"></i></a>
								&nbsp;&nbsp;
								<a href="/easyadmin/periodicity/edit/<%= p.id %>"><i class="fa fa-gears" style="color: red"></i></a>
							</td>
						</tr>
					<% end %>
				</table>
			</div>
		</div>

	</div>
</div>