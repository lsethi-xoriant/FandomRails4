<%= render partial: "/easyadmin/easyadmin/left_bar", locals: { page: "dashboard" } %>
 
  <div id="content">    
    
    <div id="content-header">
      <h1>CTA REWARDS</h1>
    </div> <!-- #content-header --> 

    <div id="content-container">

      <% if flash[:notice] %>
        <div class="row">
          <div class="col-md-12">         
              <div class="row">
                <div class="col-lg-12">
                  <div class="alert alert-success"><%= flash[:notice] %></div>
                </div>
              </div>
            
          </div>
        </div>
      <% end %>

      <div id="cta-to-filter" class="row hidden">
        <div class="col-md-12"> 
          <table id="cta-from-ajax-request" class="table table-striped">
          </table>
        </div>
      </div>


    <div class="row cta-to-show">
      <div class="col-md-12"> 
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Titolo</th>
              <th>Costo</th>
              <th>CTA</th>
              <th>Sbloccato da</th>
            </tr>
          </thead>            
          
          <% @reward_cta_list.each do |reward_cta| %>
            <tr>
                    <td>
                      <%= reward_cta.title %>
                    </td>
                    <td>
                      <%= reward_cta.cost %>
                    </td>
                    <td>
                      <%= link_to "#{CallToAction.where(:id => reward_cta.call_to_action_id).first.title} [id: #{reward_cta.call_to_action_id}]", easyadmin_cta_show_path(reward_cta.call_to_action_id), class: "btn btn-secondary btn-xs" %> 
                    </td>
                    <td>
                      <%= UserReward.where(:reward_id => reward_cta.id).sum("counter") %>
                    </td>
                  </tr>
          <% end %>
        </table>
      </div>
    </div>

    <div class="row cta-to-show">
      <div class="col-md-12">
        <%= render partial: "/easyadmin/easyadmin/pagination" %>
      </div>
    </div>

  </div>
</div>
