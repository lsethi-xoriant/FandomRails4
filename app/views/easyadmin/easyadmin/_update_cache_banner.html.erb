<script type="text/javascript">
  function updateUpdatedAt() {
    url = "/easyadmin/tag/update_updated_at"
    $.ajax({
      type: "POST",
      url: url,
      success: function(data) {
        $("#update-cache-banner-message-with-button").addClass("hidden");
        $("#update-cache-banner-message-success").removeClass("hidden");
      }
    });
  }
</script>