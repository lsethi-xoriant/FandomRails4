<%= render partial: "/easyadmin/easyadmin/left_bar", locals: { page: "property" } %>
    
<div id="content">    

  <div id="content-header">
    <h1>AGGIORNA TAG</h1>
  </div> <!-- #content-header --> 

  <div id="content-container">

    <div class="row">
      <div class="col-md-12"> 
        <% if @tag.errors.any? %>
          <div class="row">
            <div class="col-lg-12">
              <div class="alert alert-danger">
                <p>Errori nel salvataggio del TAG:</p>
                <p>
                  <ul>
                    <% @tag.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </p>
              </div>
            </div>
          </div>
        <% elsif flash[:notice] %>
          <div class="row">
            <div class="col-lg-12">
              <div class="alert alert-success"><%= flash[:notice] %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <%= form_for @tag, url: { action: "update_tag" }, html: { multipart: true } do |f| %>
      <h3>&nbsp; <a style="float: right" href="/easyadmin/tag" class="btn btn-primary">TORNA AI TAG</a></h3>
      <hr/>

      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
              <label class="text-input">Testo</label>
              <%= f.text_field :name, :class => "form-control" %>
          </div>
        </div>
      </div>

      <div class="row text-center">
        <div class="col-sm12">
          <button type="submit" class="btn btn-primary btn-lg">AGGIORNA</button>
        </div>
      </div>     
    <% end %>
  </div>
</div>