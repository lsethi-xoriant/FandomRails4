<tr>

  <td><%= "#{user.first_name} #{user.last_name}" %></td>

  <td><%= user.username %></td>

  <td><%= user.email %></td>

  <td><% "#{user.location}, (#{user.province})" if user.location.present? %></td>

  <td>
    <div class="row">
      <div class="col-sm-1" style="margin: 0;">
        <a title="Info" href="<%= root_url %>/easyadmin/user/show/<%= user.id %>"><i class="fa fa-info-circle" style="color: red"></i></a>
      </div>
      <% if can? :manage, :users %>
        <div class="col-sm-1" style="margin: 0;">
          <a title="Loggati come" href="<%= root_url %>/user/sign_in_as/<%= user.id %>"><i class="fa fa-sign-in" style="color: red"></i></a>
        </div>
      <% end %>
    </div>
  </td>

</tr>