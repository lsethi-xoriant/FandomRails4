<%= render partial: "/easyadmin/easyadmin/left_bar", locals: { page: "settings" } %>
    
<div id="content">    

  <div id="content-header">
    <h1>Gestione Rewarding Rules</h1>
  </div> <!-- #content-header --> 

  <div id="content-container">

    <div class="row">
      <div class="col-md-12"> 
        <% if @saved %>
        	<% if flash[:notice] %>
          <div class="row">
            <div class="col-lg-12">
              <div class="alert alert-success"><%= flash[:notice] %></div>
            </div>
          </div>
          <% end %>
        <% else %>
          <div class="row">
            <div class="col-lg-12">
              <div class="alert alert-danger">
                <p>Errori nel salvataggio delle regole:</p>
                <p>
                  <ul>
                    <% flash[:error].each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <h3>Editor regole</h3>
    <hr/>
    <%= form_tag("/easyadmin/rules/save", method: "post") do %>
    	<%= hidden_field_tag :key, REWARDING_RULE_SETTINGS_KEY %>
        <div class="row form-group">
            <div class="col-lg-3"><%= label_tag(:rules, "Elenco regole:") %></div>
            <div class="col-lg-8"><%= text_area_tag(:rules, @rules_value, :class => "form-control", size: "60x10") %> </div>
        </div>
        <div class="row">
          <div class="col-sm12 text-center">
              <button type="submit" class="btn btn-primary">SALVA</button>
          </div>
        </div>
    <% end %>
</div>