
<div class="panel panel-default">
		<% if f.object.id %>
			<div class="panel-heading">METADATO</div>
		<% else %>
			<div class="panel-heading">METADATO
				<p style="float: right"><%= link_to_remove_tag_fields "rimuovi" %></p>
			</div>
		<% end %>
		
		<div class="panel-body">

				<div class="col-lg-10">
					<div class="row" style="margin-bottom: 0px;">
						<div class="col-lg-6">
							<div class="form-group">
								<label class="text-input">Nome campo</label>
						  		<%= f.text_field :name, :class => "form-control" %>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
							  <label class="text-input">Tipo</label>
							   <%= f.select(:field_type, [["STRINGA", "STRINGA"], ["UPLOAD", "UPLOAD"]], {}, { :class => "form-control" }) %>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								<label class="text-input">Valore</label>
						  		<%= f.text_area :value, :class => "form-control", :size => "60x10" %>
							</div>
						</div>
					</div>
					
				</div>
			</div>
  	</div>