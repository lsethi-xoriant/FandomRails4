<%= render partial: "/easyadmin/easyadmin/left_bar", locals: { page: "settings" } %>
    
<div id="content">    

  <div id="content-header">
    <h1>Impostazioni notifiche</h1>
  </div> <!-- #content-header --> 

  <div id="content-container">

    <div class="row">
      <div class="col-md-12"> 
        <% if @saved %>
        	<% if flash[:notice] %>
          <div class="row">
            <div class="col-lg-12">
              <div class="alert alert-success"><%= flash[:notice] %></div>
            </div>
          </div>
          <% end %>
        <% else %>
          <div class="row">
            <div class="col-lg-12">
              <div class="alert alert-danger">
                <p>Errori nel salvataggio delle regole:</p>
                <p>
                  <ul>
                    <% flash[:error].each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%= form_tag("/easyadmin/settings/notifications/save", method: "post") do %>
    	<%= hidden_field_tag :key, NOTIFICATIONS_SETTINGS_KEY %>
    	<div class="row">
    		<div class="col-lg-6 col-lg-offset-3">
    			<div class="alert alert-info text-center" role="alert">
    				Selezionare gli eventi per i quali inviare una notifica all'utente
    				<!--<dl class="dl-horizontal">
    					<dt>$recent</dt><dd>Mostra i contenuti pi√π recenti</dd>
    				</dl>-->
    			</div>
    		</div>
    	</div>
        <div class="row form-group">
          <div class="col-lg-2 col-lg-offset-5"><%= label_tag(:upload_approved_label, UPLOAD_APPROVED_LABEL) %></div>
          <div class="col-lg-2"><%= check_box_tag(:upload_approved, true, @setting_value['upload_approved'] == true) %> </div>
        </div>
        <div class="row form-group">
          <div class="col-lg-2 col-lg-offset-5"><%= label_tag(:comment_approved_label, COMMENT_APPROVED_LABEL) %></div>
          <div class="col-lg-2"><%= check_box_tag(:comment_approved, true, @setting_value['comment_approved'] == true) %> </div>
        </div>
        <div class="row form-group">
          <div class="col-lg-2 col-lg-offset-5"><%= label_tag(:user_cta_interactions_label, USER_CTA_INTERACTIONS_LABEL) %></div>
          <div class="col-lg-2"><%= check_box_tag(:user_cta_interactions, true, @setting_value['user_cta_interactions'] == true) %> </div>
        </div>
        <div class="row">
          <div class="col-sm12 text-center">
              <button type="submit" class="btn btn-primary">SALVA</button>
          </div>
        </div>
    <% end %>
</div>