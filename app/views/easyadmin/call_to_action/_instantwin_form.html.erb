<div class="panel panel-default">
  <% if f.object.id %>
    <div class="panel-heading-dark">INSTANTWIN
      <% if can? :access, :rails_admin %>
        <p style="float: right">
          <a href="/rails_admin/interaction/<%= f.object.id %>/edit"><button type="button" class="btn btn-primary btn-xs"> RAILS ADMIN </button></a>
        </p>
      <% end %>
    </div>
  <% else %>
    <div class="panel-heading-dark">INSTANTWIN 
      <p style="float: right"><%= link_to_remove_fields("rimuovi", "instantwin") %></p>
    </div>
  <% end %>
  <div class="panel-body">
    <%= f.hidden_field :resource_type, :class => "form-control" %>
    <%= f.fields_for :resource do |instantwinform| %>
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-6">
            <div class="row" style="margin-bottom: 0px;">
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="text-input">Currency</label>
                    <% currencies = Reward.where("spendable = TRUE").map { |currency| [currency.title, currency.id] }.unshift ["", ""] %>
                    <%= instantwinform.select(:currency_id, currencies, {}, { :class => "form-control" }) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>