<tr>

  <td><%= calltoaction.id %></td>

  <td><%= calltoaction.title %></td>

  <td><%= calltoaction.slug %></td>

  <td class="hidden-xs hidden-sm"><%= calltoaction.activated_at.in_time_zone("Rome").strftime("%d/%m/%Y %H:%M") if calltoaction.activated_at %></td>

  <td><%= (calltoaction.call_to_action_tags.map { |call_to_action_tag| call_to_action_tag.tag.name }).join(", ") %></td>

  <td><%= (calltoaction.answers.map { |answer| answer.quiz.interaction.call_to_action.title }).join(", ") %></td>

  <td>
    <% if calltoaction.thumbnail.present? %>
      <img src="<%= calltoaction.thumbnail.url %>" class="img-responsive" style="max-width: 200px; width: 100%;">
    <% end %>
  </td>

  <td>
    <div class="row">

      <div class="col-sm-1" style="margin: 0;">
        <a href="/easyadmin/cta/show/<%= calltoaction.id %>"><i class="fa fa-info-circle" style="color: red"></i></a>
      </div>

      <div class="col-sm-1" style="margin: 0;">
        <a href="/easyadmin/cta/edit/<%= calltoaction.id %>"><i class="fa fa-pencil-square-o" style="color: red"></i></a>
      </div>

      <div class="col-sm-1" style="margin: 0;">
        <a href="/easyadmin/cta/tag/<%= calltoaction.id %>"><i class="fa fa-tag" style="color: red"></i></a>
      </div>
      
      <div class="col-sm-1" style="margin: 0;">
        <a href="/easyadmin/cta/clone/<%= calltoaction.id %>"><i class="fa fa-copy" style="color: red"></i></a>
      </div>

      <div class="col-sm-1" style="margin: 0;">
        <a href="javascript: void(0)" onclick="hideCalltoaction('<%= calltoaction.id %>')"><i class="fa fa-eye" style="color: <%= calltoaction.activated_at.blank? ? "gray" : "red" %>" id="eye-<%= calltoaction.id %>"></i></a>
      </div>

    </div>
  </td>

</tr>