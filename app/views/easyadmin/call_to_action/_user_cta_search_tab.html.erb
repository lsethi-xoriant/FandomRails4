<div id="content-header">
  <h1>CONTENUTI GENERATI DAGLI UTENTI</h1>
</div> <!-- #content-header --> 

<div id="content-container">

<% if flash[:notice] %>
  <div class="row">
    <div class="col-md-12">         
        <div class="row">
          <div class="col-lg-12">
            <div class="alert alert-success"><%= flash[:notice] %></div>
          </div>
        </div>
    </div>
  </div>
<% end %>
<% if cookies[:updated_at] %>
  <%= render_update_banner(cookies[:updated_at], @cta) %>
<% end %>

<ul class="nav nav-tabs">
  <li class="<%= page == "to_approve" ? "active" : "" %>"><a href="/easyadmin/cta/to_approve">Contenuti da approvare</a></li>
  <li class="<%= page == "approved" ? "active" : "" %>"><a href="/easyadmin/cta/approved">Contenuti pubblicati</a></li>
  <li class="<%= page == "not_approved" ? "active" : "" %>"><a href="/easyadmin/cta/not_approved">Contenuti oscurati</a></li>
</ul>

<h3><%= page == "to_approve" ? "Contenuti da moderare" : (page == "approved" ? "Contenuti pubblicati" : "Contenuti rifiutati") %></h3>

<hr/>

<div class="row">
  <div class="col-md-2">
    <div class="form-group">
    <label class="text-input">Filtra per TITOLO</label></br>
    <%= text_field_tag :title_filter, @title_filter, :class => 'form-control' %>
    </div>
  </div>
  <div class="col-md-2">
    <div class="form-group">
    <label class="text-input">Filtra per SLUG</label></br>
    <%= text_field_tag :slug_filter, @slug_filter, :class => 'form-control' %>
    </div>
  </div>
  <div class="col-md-2">
    <div class="form-group">
      <label class="text-input">Filtra per TAG</label></br>
      <%= render_html_tag_box("tag_list", params[:tag_list], "ATTENZIONE: Sono stati inseriti tag non esistenti!") %>
      <span class="help-block">Per separare i TAG digita virgola</span>
      <p id="tag_list_message"></p>
    </div>
  </div>
  <div class="col-md-2">  
    <div class="form-group">
    <label class="text-input">Filtra per USERNAME</label></br>
    <%= text_field_tag :username_filter, @username_filter, :class => 'form-control' %>
    </div>
  </div>
  <div class="col-md-2">
    <div class="form-group">
    <label class="text-input">Filtra per EMAIL</label></br>
    <%= text_field_tag :email_filter, @email_filter, :class => 'form-control' %>
    </div>
  </div>
  <div class="col-md-1">
    </br><%= submit_tag 'FILTRA', class: 'btn btn-primary' %>
  </div>
  <div class="col-md-1">
    </br><%= submit_tag 'RESET', class: 'btn btn-primary' %>
  </div>
  <div class="col-md-1">
    </br><%= submit_tag 'ESPORTA', class: 'btn btn-primary' %>
  </div>
</div>