<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row ">
            <div class="col-md-12">                      
              <h3 style="margin-top: 15px;">Entra in Fandom</h3>
            </div>          
          </div>
        </div>
        <div class="panel-body">
          <div class="row">      
            <div class="col-md-6">
              <h4 class="lead">Registrati</h4>
              <%= form_for resource, :url => user_registration_path do |f| %> 
                <% if resource.errors.any? %>
                  <div style="margin-top: 10px; margin-bottom: 10px; margin-left: -20px;">
                    <ul>
                      <p style="font-size: 15px;">Errori nella compilazione del modulo:</p>
                      <% resource.errors.full_messages.each do |error_message| %>
                          <li><%= error_message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class="form-group text-left">
                  <%= f.text_field :first_name, :class => "form-control", :placeholder => "Nome" %>
                </div>
                <div class="form-group text-left">
                  <%= f.text_field :last_name, :class => "form-control", :placeholder => "Cognome" %>
                </div>
                <div class="form-group text-left">
                  <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
                </div>
                <div class="form-group text-left">
                  <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
                </div>
                <div class="form-group text-left">
                  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Conferma password" %>
                </div>
                <div class="checkbox text-left">
                  <label><%= f.check_box :privacy %> Accetto i <a href="#">termini d'uso</a></label>
                </div>

                <%= hidden_field_tag :user_interaction_info_list %>

                <button type="submit" class="btn btn-info btn-lg btn-block">Registrati</button>
                <div class="checkbox text-left">
                  
                </div>
              <% end %>
            </div>
            <%= form_for resource, :url => user_sign_in_path do |f| %>
              <div class="col-md-6">
                <h4 class="lead text-left">Login</h4>
                <p><%= flash[:alert] %></p>
                <div class="form-group text-left">
                  <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
                </div>
                <div class="form-group text-left">
                  <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
                </div>
                <button type="submit" class="btn btn-info btn-lg btn-block">Login</button>
                <div class="checkbox text-left">
                  <label> <input type="checkbox" name="user[remember_me]" value="1" /> Ricordati di me</label>
                </div>
                <p>Dimenticato la Password? <br/><%= link_to new_password_path(:user) do %>ricevine una nuova<% end %></p>
                <hr>
                <p class="text-center" style="margin-bottom: 15px;">Oppure entra con:</p>      
                <a href="/auth/facebook_<%= $site.id %>" class="btn btn-fb btn-block">ENTRA CON FACEBOOK</a>
                <a href="/auth/twitter_<%= $site.id %>" class="btn btn-tt btn-block">ENTRA CON TWITTER</a>
                <a href="/auth/instagram_<%= $site.id %>" class="btn btn-ig btn-block">ENTRA CON INSTAGRAM</a>
                <a href="/auth/google_oauth2_<%= $site.id %>" class="btn btn-gp btn-block">ENTRA CON G+</a>
                <a href="/auth/linked_in_<%= $site.id %>" class="btn btn-li btn-block">ENTRA CON LINKEDIN</a>
                
              </div>
            <% end %>  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
