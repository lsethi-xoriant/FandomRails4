<div class="container-full">

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default cta-page">
          <div class="panel-heading">
            <div class="row ">
              <div class="col-md-6">                      
                <h3 style="margin-top: 15px;">Login</h3>
              </div> 
              <div class="col-md-6 text-right">                      
                <p style="margin-top: 10px;">Non sei ancora registrato? <a style="margin-left: 5px;" class="btn btn-info" href="/users/sign_up">Sign up</a></p>
              </div>           
            </div>
          </div>
          <div class="panel-body" style="margin-top: 15px;">
            <div class="row">      
              <%= form_for resource, :url => user_sign_in_path do |f| %>
                <div class="col-md-6 col-md-offset-3">
                  <p><%= flash[:alert] %></p>
                  <div class="form-group text-left">
                    <!--<label>Email address</label>-->
                    <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
                  </div>
                  <div class="form-group text-left">
                    <!--<label>Password</label>-->
                    <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
                  </div>
                  <button type="submit" class="btn btn-info btn-lg btn-block">Login</button>
                  <div class="checkbox text-left">
                    <label> <input type="checkbox" name="user[remember_me]" value="1" /> Ricordati di me</label>
                  </div>
                  <p><%= link_to new_password_path(:user) do %>Dimenticato la Password?<% end %></p>
                  <hr>
                  <div style="margin-bottom: 15px;">
                    <p class="text-center" style="margin-bottom: 15px;">Oppure entra con:</p>      
                    <a href="/auth/facebook_<%= $site.id %>" class="btn btn-fb btn-block">ENTRA CON FACEBOOK</a>
                    <a href="/auth/twitter_<%= $site.id %>" class="btn btn-tt btn-block">ENTRA CON TWITTER</a>
                    <a href="/auth/instagram_<%= $site.id %>" class="btn btn-ig btn-block">ENTRA CON INSTAGRAM</a>
                    <a href="/auth/google_oauth2_<%= $site.id %>" class="btn btn-gp btn-block">ENTRA CON G+</a>
                    <a href="/auth/linked_in_<%= $site.id %>" class="btn btn-li btn-block">ENTRA CON LINKEDIN</a>
                  </div>
                </div>
              <% end %>  
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>


