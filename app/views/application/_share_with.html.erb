<!-- Modal -->
<div class="modal fade" id="share-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
	  <div class="modal-content">
	    <div class="modal-header">
	      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	      <h4 class="modal-title" id="myModalLabel">Condividi con il provider che preferisci</h4>
	    </div>
	    <div class="modal-body">
	    	<% if current_user %>
	    		<% share.each do |s| %>
	    			<% if s.resource.share_type != "EMAIL" %>
	    				<button id="share-<%= s.resource.share_type %>" type="button" class="btn btn-default" onclick="shareWith('<%= s.resource.share_type %>', <%= s.id %>)"><%= s.resource.share_type %></button>
	    			<% end %>
	    		<% end %>
	    	<% else %>
	      		Per poter giocare devi <a href="/users/sign_up">loggarti o registrarti</a>
	      	<% end %>
	    </div>
	    <div class="modal-footer">
	      <button type="button" class="btn btn-default" data-dismiss="modal">Chiudi</button>
	    </div>
	  </div>
	</div>
</div>