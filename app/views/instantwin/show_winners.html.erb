<%= render partial: "/application/user_bar" %>
<style>
	.carousel .item{
		background-color: transparent;
		padding-left: 64px;
		padding-right: 80px;
	}
	.carousel-control.left,
	.carousel-control.right{
		background-image: none;
	}
	
	.carousel-control span{
		background-color: #FFF;
		border-radius: 100px;
		padding: 7px;
		color: #000;
	}
	
	.img-circle{
		border: 3px solid #FFF;
	}
</style>
<% if @winners.any? %>

  <div class="container">   

      <div class="row" style="margin: 15px 0;">
        <%= render partial: "/application/header" %>
		<h1 class="text-center" style="margin-bottom:40px; color:#FFF; font-family: 'Oswald-Bold', helvetica, arial, sans-serif; text-shadow: 2px 2px 2px rgba(40, 40, 40, 1);">I VINCITORI</h1>
		
		<% if @winners.count == 0 %>
			<h2 class="text-center" style="color:#FFF; font-family: 'Oswald-Bold', helvetica, arial, sans-serif;">Al momento non ci sono vincitori.</h2>
		<% end %>
		
		<div id="carousel-example-generic" class="carousel slide hidden-xs" data-ride="carousel">
		
		  <!-- Wrapper for slides -->
		  <div class="carousel-inner">
		    <div class="item active">
		    	<% i = 1 %>
		      <% @winners.each do |winner| %>
                        
                <div class="col-sm-3">
                	<div class="text-center">
                		<img class="img-circle img-responsive" src="<%= winner['avatar'] %>" />
                	</div>
                	<div class="text-center">
                		<p style="margin-top:10px; color:#fff; font-family: 'Oswald-Bold', helvetica, arial, sans-serif; text-shadow: 2px 2px 2px rgba(40, 40, 40, 1); letter-spacing: 1px;"><%= winner['name'] %></p>
                	</div>
                </div>
                
                <% if i % @winner_per_page == 0 && i != @winners.count %>
                	</div><div class="item">
                <% end %>
				<% i = i + 1 %>
              <% end %>
		    </div>
		  </div>
		
		  <!-- Controls -->
		  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
		    <span style="font-size: 16px;" class="glyphicon glyphicon-chevron-left"></span>
		  </a>
		  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
		    <span style="font-size: 16px;" class="glyphicon glyphicon-chevron-right"></span>
		  </a>
		</div>
        
        <div class="row visible-xs">
          	<% @winners.each do |winner| %>
                        
	            <div class="col-xs-4">
	            	<div class="text-center">
	            		<img class="img-circle img-responsive" src="<%= winner['avatar'] %>" />
	            	</div>
	            	<div class="text-center">
	            		<p style="color:#fff; font-family: 'Oswald-Bold', helvetica, arial, sans-serif; text-shadow: 2px 2px 2px rgba(40, 40, 40, 1); letter-spacing: 1px;"><%= winner['name'] %></p>
	            	</div>
	            </div>
	            
	          <% end %>
          </div>
          
      </div>




      </div>
  </div>

  <%= render partial: "/application/footer" %>

  <script type="text/javascript">
      $('.carousel').carousel({
	    interval: false
	  }); 
  </script>

<% end %>