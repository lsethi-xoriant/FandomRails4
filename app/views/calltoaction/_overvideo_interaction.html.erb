<!-- OVERVIDEO AREA -->
<% if interaction.resource.answers.any? %>
  <div class="overvideo overvideo-fluid">
      <div class="overvideo-canvas">
          <div class="overvideo-content">
              <div class="row">
                  <div class="col-sm-12 text-center">
                      <h2 class="hidden-xs" style="color: #fff;"><%= interaction.resource.question %></h2>
                      <h4 class="visible-xs" style="color: #fff;"><%= interaction.resource.question %></h4>
                  </div>
                  <div class="col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 text-center">
                      <div class="row">

                        <!-- ANSWER STREAM AS CIRCLE -->
                        <% interaction.resource.answers.each do |answer|%>
                            <% if answer.call_to_action %>
                              <!-- ANSWER WITH NEXT CALLTOACTION -->
                              <div class="col-xs-4 text-center" style="margin-top: 15px;">
                                <a href="javascript: void(0)" onclick="updateTriviaAnswer(<%= interaction.call_to_action.id %>, <%= interaction.id %>, <%= answer.id %>, <%= interaction.when_show_interaction == "OVERVIDEO_DURING" %>)"><img src="<%= answer.image(:medium) %>" class="img-circle img-responsive img-circle-overvideo enable <%= calculate_user_answer_class(answer, user_interaction.answer_id) if user_interaction %>" ></a>
                                <h5 style="color: #fff;"><%= answer.text %></h5>
                              </div>
                            <% else %>
                              <%= render partial: "/calltoaction/trivia_answer", locals: { user_interaction: user_interaction, answer: answer, interaction: interaction } %>
                              <!--
                              <div class="col-md-8 col-md-offset-4 col-sm-8 col-sm-offset-4 choice choosen">
                                <div class="status">
                                  <h4>40%</h4>
                                </div>
                                <a href="#" class="thumbnail"><img src="<%= answer.image(:medium) %>" alt="..."></a>
                              </div>
                              -->
                            <% end %>
                        <% end %>

                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
<% end %>