<div class="col-sm-12 text-center">
  <h2><%= interaction.resource.question %></h2>
</div>
<div class="col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 text-center">
  <div class="row">
    <!-- ANSWER STREAM AS CIRCLE -->
    <% interaction.resource.answers.each do |answer|%>
        <% if answer.call_to_action %>
          <!-- ANSWER WITH NEXT CALLTOACTION -->
          <div class="col-xs-4 text-center" style="margin-top: 15px;">
            <a href="javascript: void(0)" onclick="updateAnswer(<%= interaction.call_to_action.id %>, <%= interaction.id %>, <%= answer.id %>, '<%= interaction.when_show_interaction %>')"><img src="<%= answer.image(:medium) %>" class="img-circle img-responsive img-circle-overvideo enable <%= (answer.correct ? "right" : "wrong") if user_interaction %>" ></a>
            <h5 style="color: #fff;"><%= answer.text %></h5>
          </div>
        <% else %>
          <%= render partial: "/calltoaction/trivia_answer", locals: { user_interaction: user_interaction, answer: answer, interaction: interaction } %>
        <% end %>
    <% end %>
  </div>
</div>