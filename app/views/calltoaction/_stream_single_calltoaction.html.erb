<div class="row">      
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-default no-pad">
      <div class="panel-body no-pad">
        <!-- MEDIA -->
        <div class="row">
          <div class="col-md-12">
            <% if calltoaction.media_type == "VIDEO" %>
                <div class="video flex-video widescreen" style="background:#222;">
                  
                	<!-- IFRAME VIDEO -->
                  <div id="home-stream-video-<%= calltoaction.id %>" type="<%= type %>" main-calltoaction-id="<%= calltoaction.id %>" secondary-calltoaction-id="<%= calltoaction.id %>" interaction-play-id="<%= interaction_play_for_calltoaction(calltoaction).id %>"></div>

                  <!-- OVERVIDEO AREA -->
                  <div id="home-overvideo-<%= calltoaction.id %>"></div>
                  
                  <!-- OVERVIDEO TITLE -->
                  <div id="home-overvideo-title-<%= calltoaction.id %>"><%= render partial: "/calltoaction/overvideo_play", locals: { calltoaction: calltoaction } %></div>

                </div>
            <% else %>
            	<!-- IMAGE -->
              <img src="<%= calltoaction.image %>" style="width: 100%; margin-bottom: 15px;">
            <% end %>
          </div>
        </div>

        <!-- UNDERVIDEO AREA -->
        <div class="row">
          <div class="col-md-12 text-center">
            <h3 style="margin: 0 0 15px 0;"><%= calltoaction.title %></h3>
          </div>
          <% if calltoaction.description %>
	          <div class="col-md-12 text-left">
	            <h3 style="margin: 0 0 15px 0;"><%= calltoaction.description %></h3>
	          </div>
          <% end %>
          <div class="col-sm-12 text-center" id="home-undervideo-<%= calltoaction.id %>">
            <!-- UNDERVIDEO FEEDBACK -->               
          </div>

          <div class="col-md-12" id="share-footer">
            <!-- SHARE FOOTER -->
          </div>
        </div>

      </div>         
    </div>        
  </div>
</div>