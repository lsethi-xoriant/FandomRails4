<div class="col-sm-12">
  <div class="row text-center cta-stream-heading" style="position: relative;">
    <div id="calltoaction-<%= calltoaction.id %>-countdown" class="col-sm-12 text-center container-cover-countdown">
      <h3 class="cover-countdown"></h3>
    </div>
    <div class="col-sm-12 calltoaction-cover-description">
      <h2 style="margin-top: 0;"><%= calltoaction.description %></h2>
    </div>
    <div class="col-xs-12 text-center undervideo-feedback">
      <% if calltoaction_reward_status[:winnable_reward_count] > 0 %>
        <h6 style="margin-bottom: 0;">Ottieni fino a +<%= calltoaction_reward_status[:winnable_reward_count] %> punti</h6>
      <% else %>
        <h6 style="margin-bottom: 0;">Hai ottenuto +<%= calltoaction_reward_status[:win_reward_count] %> punti</h6>
      <% end %>
      <% unless calltoaction_reward_status[:reward].numeric_display %>  
      <div class="col-sm-12 text-center" style="margin-bottom: 5px;">  
        <% calltoaction_reward_status[:reward_status_images].each do |reward| %>
            <img src="<%= reward %>" style="width: 15px;">
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>