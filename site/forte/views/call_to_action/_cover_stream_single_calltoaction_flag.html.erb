<% tags_with_flag_in_calltoaction = get_tag_with_tag_about_call_to_action(calltoaction, "flag") %>
<% if tags_with_flag_in_calltoaction.any? %>
  <span style="position: absolute; top: -3px; left: -3px;"><img src="<%= tags_with_flag_in_calltoaction.first.tag_fields.select { |tf| tf.name == "icon" }.map { |tf| tf.upload }.first %>" /></span>
<% end %>
