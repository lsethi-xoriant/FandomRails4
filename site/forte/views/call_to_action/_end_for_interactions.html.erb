<% calltoaction_reward_status = JSON.parse(compute_current_call_to_action_reward_status(MAIN_REWARD_NAME, calltoaction)) %>

<div class="col-sm-12">
  <div class="row text-center cta-stream-heading" style="position: relative;">
    <div class="col-sm-12" style="color: #fff;">
      <h1 style="font-size: 50px; margin-top: 20px;"><span class="glyphicon glyphicon glyphicon-ok-sign"></span></h1>
      <h2 style="margin-top: 15px; font-weight: bold;">Sfida<br>completata!</h2>
    </div>
    <div class="col-xs-12 text-center undervideo-feedback">
      <% if calltoaction_reward_status["winnable_reward_count"] > 0 %>
        <h6>Ottieni fino a +<%= calltoaction_reward_status["winnable_reward_count"] %> punti</h6>
      <% else %>
        <h6>Hai ottenuto +<%= calltoaction_reward_status["win_reward_count"] %> punti</h6>
      <% end %>
      <% unless calltoaction_reward_status["reward"]["numeric_display"] %>  
        <div class="col-sm-12 text-center" style="margin-bottom: 20px; float: none;">  
          <% calltoaction_reward_status["reward_status_images"].each do |reward| %>
              <img src="<%= reward %>" style="width: 15px;">
          <% end %>
        </div>
      <% end %>

      <% if aux && aux[:show_next_calltoaction_button] %>
        <!-- NEXT CALLTOACTION -->
        <a class="btn-2 btn-2-small btn-2-small-desktop go-on" role="button" href="/custom_call_to_action/<%= calltoaction.id %>/next" style="margin-bottom: 15px; width: 50%;">VAI AVANTI</a>
      <% else %>     
        <a class="btn btn-yellow" role="button" onclick="restartInteractions(<%= calltoaction.id %>)" style="margin-bottom: 15px;">RIVEDI LE RISPOSTE</a>
      <% end %>

    </div>
  </div>
</div>