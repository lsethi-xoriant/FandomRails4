<% if current_user %>
  <div class="modal fade" id="registration-modal" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content text-center">
        <div class="modal-body">

          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

          <div class="row">

            <div class="col-md-6 col-md-offset-3" style="margin-top: 10px;"> 
              <img style="width: 100%" src="<%= asset_path("coin/sale-registration.png") %>">
            </div>
            <div class="col-md-12 text-center">
              <p class="call-to-action__share__modal-title">Ciao, <%= "#{current_user.first_name} #{current_user.last_name}" %></p>
            </div>
            <div class="col-md-12 text-center">
              <p class="call-to-action__share__modal-description">Ti abbiamo inviato un email con le indicazioni per<br><span class="call-to-action__media__description-bold">SCONTO 20%</span></p>
            </div>
            <div class="col-md-4 col-md-offset-4 text-center">
              <button type="button" data-dismiss="modal" class="btn btn-primary btn-block call-to-action__button__inspire registration-modal__button">ISPIRAMI ORA</button>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>