<div class="modal fade" id="modal-interaction-instant-win" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">GIOCA</h4>
      </div>
      <div ng-if="!aux.instant_win_info.won && aux.instant_win_info.interaction_id" class="modal-body">
        <div class="row">
          <div ng-if="aux.instant_win_info.info" class="col-md-12">
            {{aux.instant_win_info.info}}
          </div>
          <div class="col-md-12 text-center">
            <a class="btn btn-danger btn-lg" ng-class="{disabled: aux.instant_win_info.in_progress}" href="javascript:void(0)" ng-click="playInstantWin();">GIOCA ADESSO</a>
          </div>
        </div>
      </div>
      <div ng-if="aux.instant_win_info.won && aux.instant_win_info.interaction_id" class="modal-body">
        <div class="row">
          <div class="col-md-12 text-center">
            <p>Hai già vinto un premio</p>
          </div>
        </div>
      </div>
      <div ng-if="!aux.instant_win_info.interaction_id" class="modal-body">
        <div class="row">
          <div class="col-md-12 text-center">
            <p>Concorso non attivo</p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">CHIUDI</button>
      </div>
    </div>
  </div>
</div>