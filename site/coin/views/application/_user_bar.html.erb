<% if current_user %>
  <div class="row hidden-xs">
    <div class="col-md-12">
      <div class="user-bar panel panel-default">
        <div class="panel-body user-bar__body">
          <img class="user-bar__body__avatar" src="<%= current_avatar %>">
          <p class="user-bar__body__username"><%= "#{current_user.first_name} #{current_user.last_name}" %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>