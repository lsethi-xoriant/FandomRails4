<%= light_link_to("{{content.attributes.detail_url}}") do %>
  <div class="relateds-flexslider__item-panel" ng-style="{'background-color': content.attributes.aux.miniformat['label_background']}" ng-if="content.attributes.type == 'cta'"> 
    <div class="row">
      <div class="col-xs-12 text-center">
        <div class="relateds-flexslider__thumbnail">
          <img class="img-responsive cta-preview__image" ng-src="{{content.attributes.thumb_url}}"> 
          <div class="text-center flag__container" ng-if="content.attributes.aux.flag" ng-style="{'background-color': content.attributes.aux.flag['label_background'], 'color': content.attributes.aux.flag['label_color']}"><p ng-bind-html="content.attributes.aux.flag['title']"></p></div>           
        </div>
        <div class="cta-preview__miniformat-container">
          <span class="cta-preview__miniformat" ng-style="{'background-color': content.attributes.aux.miniformat['label_background']}">{{content.attributes.aux.miniformat['title']}}</span>
        </div>
        <p class="cta-preview__title">{{content.attributes.title | cut:true:70}}</p>
      </div>
    </div>
  </div>
  <div class="relateds-flexslider__item-panel" ng-if="content.attributes.type == 'tag'">
  	  <div class="row">
	      <div class="col-xs-12 text-center">
	        <div class="relateds-flexslider__thumbnail">
	          <img class="img-responsive cta-preview__image" ng-src="{{content.attributes.thumb_url}}"> 
	        </div>
	        <p class="cta-preview__title cta-preview__title--tag">{{content.attributes.title | cut:true:70}}</p>
	      </div>
      </div> 
  </div>  
<% end %>