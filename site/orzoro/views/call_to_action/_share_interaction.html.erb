 <div class="share-interaction__cover__info"> 

  <!-- EMAIL -->
  <button ng-if="interaction_info.interaction.resource.providers.email" type="button" class="btn btn-default share-interaction__cta__info__email-button" ng-click="shareWith(parent_calltoaction_info, interaction_info, 'email')">
    <i class="fa fa-envelope share-interaction__cover__info__glyphicon-envelope"></i>
  </button>

  <!-- FACEBOOK -->   
  <button ng-if="interaction_info.interaction.resource.providers.facebook" class="btn btn-facebook share-interaction__cta__info__fb-button" ng-click="shareWith(parent_calltoaction_info, interaction_info, 'facebook')"><i class="fa fa-facebook share-interaction__cover__info__glyphicon-fb"></i></button>

  <!-- TWITTER -->   
  <button ng-if="interaction_info.interaction.resource.providers.twitter" class="btn btn-twitter share-interaction__cta__info__tt-button" ng-click="shareWith(parent_calltoaction_info, interaction_info, 'twitter')"><i class="fa fa-twitter share-interaction__cover__info__glyphicon-tt"></i></button>

    <!-- TWITTER -->   
  <button ng-if="interaction_info.interaction.resource.providers.whatsapp" class="btn btn-green share-interaction__cta__info__wa-button" ng-click="shareWith(parent_calltoaction_info, interaction_info, 'whatsapp')"><i class="fa fa-whatsapp share-interaction__cover__info__glyphicon-tt"></i></button>
  
</div>