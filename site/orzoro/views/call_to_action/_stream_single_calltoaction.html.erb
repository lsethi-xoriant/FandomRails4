<div class="row main-row">

  <div class="col-sm-8 col-sm-offset-2 cta__media-container cta__media-container-{{calltoaction_info.miniformat['name']}}">
    <!-- MEDIA -->
    <%= render partial: "/call_to_action/stream_single_calltoaction_media" %>
    <!-- SHARE: TODO -->
    <div class="share-interaction__container" ng-if="!aux.mobile">
      <div ng-repeat="interaction_info in calltoaction_info.calltoaction.interaction_info_list | filter:filterShareInteractions">
        <%= render partial: "/call_to_action/share_interaction" %>
      </div>
    </div>

    <div class="col-xs-12">
      <%= render partial: "/call_to_action/stream_single_calltoaction_interactions" %>
    </div>

  </div>

  <!-- VOTE INTERACTION -->
  <div class="col-sm-8 col-sm-offset-2 text-center" ng-repeat="interaction_info in calltoaction_info.calltoaction.interaction_info_list | filter:filterVoteInteractions">
    <%= render partial: "/call_to_action/vote_interaction" %>
  </div>

</div>
<div class="row main-row cta__undervideo">
  <div class="col-md-12">
    <div class="row">

      <div class="col-sm-2 text-left">
        <span class="fa fa-angle-left cta__fa-angle"></span>
      </div>

      <div class="col-sm-8 text-center cta__title-and-description-col">
        <h1 class="cta__title">{{calltoaction_info.calltoaction.title}}</h1>
        <h2 class="cta__description" ng-bind-html="calltoaction_info.calltoaction.description"></h2>
      </div>

      <div class="col-sm-2 text-right">
        <span class="fa fa-angle-right cta__fa-angle"></span>
      </div>
    </div>

    <div ng-if="shareInteractionsPresent(calltoaction_info.calltoaction.id)" ng-repeat="interaction_info in calltoaction_info.calltoaction.interaction_info_list | filter:filterShareInteractions" class="row visible-xs">
      <div id="share-interaction-{{interaction_info.interaction.id}}">
        <%= render partial: "/call_to_action/share_interaction" %>
      </div>
    </div>  

    <div class="row visible-xs">
      <div class="col-md-2 col-md-offset-9 col-xs-12">
        <button style="margin-top: 15px;" class="btn btn-primary btn-block registration__button" onclick="window.history.back()"><span>Indietro</span></button>
      </div>
    </div>

  </div>
</div>

<div class="row main-row related__row">
  <div class="col-sm-12 text-center" ng-repeat="miniformat in [calltoaction_info.miniformat]">
    <%= render partial: "application/ribbon" %>
  </div>


  <div class="col-sm-4" ng-repeat="calltoaction in aux.related_calltoaction_info">
    <%= render partial: "/call_to_action/calltoaction_thumb" %> 
  </div>

</div>

