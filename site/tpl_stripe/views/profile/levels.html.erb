<%= render partial: "/application/user_bar" %>

<div class="">
  
  <div class="panel panel-default">
    <div class="panel-heading profile-heading">
      <div class="container">
        <div class="row" style="margin-top: 1.5em;">
          <div class="col-md-12">
            <%= render partial: "profile/profile_header" %>
            <hr>
            <%= render partial: "profile/profile_navbar", locals: { page: "badges" } %>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-body profile-body">
      <div class="container">
        <div class="row">
          <% get_tags_with_tag("level").each do |level_tag| %>
            <% if level_tag %>
              <div class="col-md-12">
                <div id="livelli">
                  <div class="page-header">
                    <h2>Livelli <small><%= get_user_reward_with_tag_counter(level_tag.name) %>/<%= level_tag.reward_tags.count %></small></h2>
                  </div>
                </div>
                  <div class="row livelli">
                    <% level_tag.reward_tags.each do |level_reward_tag| %>
                      <div class="col-xs-6 col-sm-4 col-md-3 text-center">
                        <div class="no-box">
                          <img class="img-circle img-responsive" src="<%= level_reward_tag.reward.main_image(:medium) %>" width="60%" alt="...">
                          <div class="caption">
                            <h4><%= level_reward_tag.reward.title %></h4>
                            <p><small><%= level_reward_tag.reward.short_description %></small></p>
                          </div>
                          <% if user_has_reward(level_reward_tag.reward.name) %>
                            <div class="progress">
                              <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                <span class="sr-only">100% Complete (success)</span>
                              </div>
                            </div>
                          <% else %>
                            <div class="progress">
                              <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                <span class="sr-only">0% Complete (success)</span>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    <% end %>

                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>


</div>