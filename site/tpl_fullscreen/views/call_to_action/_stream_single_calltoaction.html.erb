<div class="item <%= 'active' if i == 0 %> cta" id="cta_1" style="background: url('<%= calltoaction.media_image %>') no-repeat center center; background-size: cover;">
  <div class="overvideo">
    <div class="overvideo-canvas" style="position: relative;">
      <div class="overvideo-content" style="display: inline-table; width: 100%;
overflow: auto;
margin: auto;
position: absolute;
top: 0;
left: 0;
bottom: 0;
right: 0;
color: #fff">
        <div class="row">
          <div class="col-md-12 text-left">                      
            <% tags_with_miniformat_in_calltoaction = get_tag_with_tag_about_call_to_action(calltoaction, "miniformat") %>
            <% if tags_with_miniformat_in_calltoaction.any? %>
              <h5 class="text-muted">
                <span class="<%= tags_with_miniformat_in_calltoaction.first.tag_fields.find_by_name("icon").try(:value) %>"></span>
                <%= tags_with_miniformat_in_calltoaction.first.name %>
              </h5>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 text-left">
            <h4 class="lead">
              <%= calltoaction.title %>
            </h4>
          </div>
          <div class="col-md-10 col-xs-10 text-left">
            <div class="row">
              <div class="col-md-12 ">
                <h4>
                  <% current_call_to_action_reward_status = compute_call_to_action_completed_or_reward_status(MAIN_REWARD_NAME, calltoaction) %>
                  <% if current_call_to_action_reward_status.present? %>
                    <% if current_call_to_action_reward_status["winnable_reward_count"] > 0 %>
                      <span id="head-feedback-calltoaction-<%= calltoaction.id %>" class="label label-warning" style="padding-top: 5px;">+<%= current_call_to_action_reward_status["winnable_reward_count"] %>
                        <span class="glyphicon glyphicon-star"></span>
                      </span>
                    <% end %>
                  <% else %>        
                    <span id="head-feedback-calltoaction-<%= calltoaction.id %>" class="label label-success" style="padding-top: 5px;">
                      FATTO <span class="glyphicon glyphicon-ok"></span>
                    </span>
                  <% end %>
                </h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="carousel-caption">
     
  </div>

  <nav class="navbar navbar-fixed-bottom cta-nav" role="navigation">
    <div class="container-fluid">
      <ul class="nav navbar-nav left-nav"> 
        <li><a href="#desc" class="scroll"><span class="glyphicon glyphicon-file"> </span> Descrizione</a></li> 
        <li><a href="#comm"><span class="glyphicon glyphicon-comment scroll"> </span> Commenti (78)</a></li>  
      </ul>
      <ul class="nav navbar-nav navbar-right"> 
        <li><a href="#"><span class="glyphicon glyphicon-thumbs-up scroll"> </span> like</a></li> 
        <li><a href="#"><span class="glyphicon glyphicon-share-alt scroll"> </span> Share</a></li>  
      </ul>
    </div>
  </nav>


</div>

