/* RESET CSS */

#isp-header {
  .title-header {
    background-color: #3d6b80 !important;
  }
}

hr {
  border-color: #ccc;
}

.cta__video-col--about--container {
  background: $darkblue;
  background-image: url("<%= asset_path('intesa_expo/texture.png') %>");
  border-bottom: 1px solid $darkblue;
  width: 100%;
  height: 100%;
}

.evidence_ctas_container {
  padding-bottom: 30px;
}

.form-control {
  color: #000;
}

.cta__banner-1-bg {
  background: $blue;
  background-image: url("<%= asset_path('intesa_expo/texture.png') %>");
  margin-top: 15px;
  margin-bottom: 15px;
  padding: 15px;
}

*::not .title-header {
  font-family: "Helvetica"
}

.flex-direction-nav a {
  opacity: 1;
}

img {
  max-width: 100%;
}

a:hover{
  color: $orange;
  text-decoration: none;
}

.cta__cps-panel .panel-title {
  color: #000;
}

h1, h2, 
.ctas__flexslider__title, 
.cta__extra_fields__title, 
.cta__related__title {
  font-family: 'Gnuolane';
}

.cta__extra_fields__hr {
  border-color: $lightblue;
  margin: 15px -25px;
}

.ctas__flexslider__title {
  line-height: 30px;
}

body {
  padding-top: 0;
  background-color: #fff;
}

.about-container-white {
  background-color: #fff;
}

.interview_banner_col {
  padding: 0;
  /*margin-top: 15px;*/
  img {
    width: 100%;
  }
}

.widget-calendar__title-container {
  padding: 5px;
  background-color: $darkblue;
}

.widget-calendar__title {
  font-family: 'Gnuolane';
  color: $lightblue;
  text-transform: uppercase;
  font-size: 22px;
  border-bottom: 1px solid $lightblue;
  a{
    color: $lightblue !important;
  }
}

.content-browse {
  background-color: whitesmoke;
  background-image: url("<%= asset_path('intesa_expo/texture.png') %>");
  padding-bottom: 25px;
}

.view-all-link {
  position: absolute;
  right: 15px;
  font-size: 17px;
  line-height: 30px;
  color: $lightblue;
  text-transform: capitalize;
}

.body-imprese {
  .left-logo, .right-logo {
    border: 0 !important;
  }

  .header-container {
    background-color: $blue !important; 
    background-image: url("<%= asset_path('intesa_expo/texture.png') %>");
  }
  .navbar__container-fluid, .navbar-default {
    background-color: $darkblue !important;
    border-color: $darkblue !important;
  }
  .navbar__item-text {
    color: $lightblue;
  }
  .navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active > a:hover, .navbar-default .navbar-nav > .active > a:focus,
  .navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus {
    background-color: $darkblue !important;
    p { color: #fff !important; }
  }

  .ctas__flexslider__container {
    padding-left: 15px !important; 
    padding-right: 15px !important;
  }
  
  .stripe__title {
    color: #fff !important;
  }
  
  .content-browse{
    background-color: $blue;
  }
  
  .category-header__title{
    color: white;
  }
  
  .category-header__subtitle {
    color: white;
  }
}

.stripe-blue {
  .stripe__title {
    color: #fff !important;
  }
}

p {
  margin: 0;
}

.browse-sections {
  margin-top: 15px;
}

.main-row__evidence {
  padding-top: 30px;
  padding-left: 43px;
  padding-right: 43px;
  margin-bottom: 15px;
  //padding-bottom: 30px;
}

.main-row {
  padding-left: 43px;
  padding-right: 43px;
}

.stripe__title {
  color: $lightblue;
}

.container-fluid__blue, .container--blue {
  background-color: $blue !important; 
  background-image: url("<%= asset_path('intesa_expo/texture.png') %>");
}

.container-fluid__blue, .container--blue,
.stripe-darkblue, .stripe-blue {
  .stripe__title {
    color: #fff;
  }
  
  h1.calendar-event__stripe-title, h2.calendar-event__stripe-subtitle,
  .category-header__subtitle, .category-header__title {
    color: white;
  }
  
  h2.calendar-event__stripe-subtitle{
    font-size: 22px;
  }
  
  #full-calendar .fc-center h2{
    color: white;
  }
  
  #full-calendar .fc-content-skeleton table td.fc-day-number.fc-other-month{
    background-color: rgba(18, 35, 51, 0.5) !important;
  }
}

.stripe-container {
  background-image: url("<%= asset_path('intesa_expo/texture.png') %>");
  background-color: #fff;
  //border-bottom: 1px solid #ddd;
  border-bottom: 1px solid;
  border-color: rgba(0, 0, 0, 0.1);
}

.stripe-darkwhite {
  background-color: whitesmoke;
}

.stripe-darkblue {
  background-color: $darkblue;
}

.stripe-blue {
  background-color: $blue;
}

.container-fluid__lightblue, .container--lightblue {
  background-color: $lightblue !important;
  background-image: url("<%= asset_path('intesa_expo/texture.png') %>");
}

.container-fluid__white, .container--white {
  background-color: white !important; 
  background-image: url("<%= asset_path('intesa_expo/texture.png') %>");
}

.center-logo {
  margin: 15px auto; 
  max-width: 160px;
  width: 100%;
}

.left-logo {
  margin: 15px 0; 
  max-width: 220px;
  width: 100%;
  border: 1px solid #eee;
}

.right-logo {
  margin: 15px 0; 
  max-width: 220px;
  width: 100%;
  border: 1px solid #eee;
}

#widget-calendar {
  background-color: $darkblue;
  padding: 10px;
  margin-bottom: 10px;

  .fc-widget-header, .fc-widget-content {
    border-width: 0;
    color: #fff;
  }

  .fc-toolbar {
    margin-bottom: 5px !important;
  }

  .fc-other-month, .fc-widget-header {
    opacity: 1;
    color: #99a9b6;
  }

  .fc-content-skeleton {
    padding-bottom: 0;
    margin-bottom: 2px;
  }

  .fc-widget-header {
    text-transform: uppercase;
    font-size: 10px;
    margin-bottom: 5px;
  }

  .fc-basic-view .fc-body .fc-row {
    min-height: 0;
  }

  .fc-center {
    h2 {
      text-transform: uppercase;
      color: #fff;
      font-size: 18px;
      margin-top: 0;
    }
  }

  .fc-button {
    outline: 0;
    background-color: transparent;
    background-image: none;
    border-radius: 0;
    border: 0;
    text-shadow: none;
    box-shadow: none;
    color: #fff;
  }

  .fc-day-number {
    font-size: 12px;
    text-align: center;
    cursor: pointer;
  }

  .fc-state-highlight {
    background-color: $orange;
  }

  .fc-icon:after {
    margin: 0 !important;
  }

  .fc-icon-left-single-arrow:after, .fc-icon-right-single-arrow:after {
    content: '';
  }

  .fc-button {
    height: auto !important;
    padding: 0 !important;
  }

  .fc-icon {
    @extend .glyphicon !optional;
    overflow: visible;
    line-height: 0;
    margin: 0;
    top: 0;
  }

  .fc-icon-left-single-arrow {
    @extend .glyphicon-chevron-left !optional;
  }

  .fc-icon-right-single-arrow {
    @extend .glyphicon-chevron-right !optional;
  }

}

.browse-sections {
  .widget-calendar__title-container {
    margin-top: 10px;
  }
}

/********************* COOKIES FOOTER *********************/

.cookies-footer {
  background: rgba(0, 0, 0, 0.8); 
  color: #fff; 
  min-height: 0; 
  padding: 10px;
}

.cookies-footer__description {
  margin: 15px 0; 
  font-size: 13px;
  line-height: 15px;
}

.cookies-footer__link {
  color: #fff;
  text-decoration: underline;
  font-weight: bold;
}

.cookies-footer__close {
  font-size: 34px;
  color: #fff;
  .fa {
    padding-top: 15px;
  }
}

.comment_evidence {
    -webkit-animation: comment_evidence_animation 5s; /* Chrome, Safari, Opera */
    animation: comment_evidence_animation 3s;
}

.spacer {
  margin: 20px 0;
}

.brws-item {
  background: $gray;
  padding-top: 30px;
  padding-bottom: 30px;
}

.brws-item--dark{
}

.container--default {
  background-color: #FFF;
}

@-webkit-keyframes comment_evidence_animation { /* Chrome, Safari, Opera */
  0% { background: transparent; }
  50% { background: yellow; }
  100% { background: transparent; }
}

@keyframes comment_evidence_animation { /* Standard syntax */
  0% { background: transparent; }
  50% { background: yellow; }
  100% { background: transparent; }
}

/********************* ERRORS *********************/

.error__container {
  background-image: url('bg-modal.png'); 
  background-size: 100% 100%;
  background-color: #fff;
}

.error__image {
  margin-top: 155px;
  max-width: 240px;
  width: 100%;
}

.error__title {
  margin-top: 220px;
}

.error__description {
  margin-bottom: 220px;
}

/********************* IFRAME *********************/

.iframe-stripe-container {
  background-size: 100% auto;
  max-width: 800px;
  .relateds-flexslider .cta__flag {
    left: 110px !important;
  }
  .relateds-flexslider .slides {
    padding-top: 0 !important;
    padding-bottom: 0 !important;
  }
  .relateds-flexslider {
    padding-top: 3px !important;
    padding-bottom: 3px !important;
  }
  .iframe-bookmark {
    position: absolute; 
    bottom: 0; 
    left: -6px; 
    width: 200px;
  }
  .main-row {
    position: relative;
    padding-right: 30px;
    padding-left: 0;
    border-top: 6px solid rgba(173, 123, 71, 0.5);
    border-left: 6px solid rgba(173, 123, 71, 0.5);
    border-right: 6px solid rgba(173, 123, 71, 0.5);
  }
  .content-preview__item-panel {
    height: 218px;
  }
  .content-preview__title, .content-preview__title--press {
    font-size: 13px;
  }
  .iframe-img {
    margin-top: 5px;
    width: 70px;
  }
  .iframe-title {
    font-family: 'Gnuolane';
    color: $gold;
    font-size: 24px;
    margin-top: 15px;
    line-height: 26px;
  }
  .iframe-description {
    font-family: 'Gnuolane';
    color: #fff;
    font-size: 26px;
    line-height: 28px;
  }
}

.iframe-body .container {
  height: 250px !important;
  overflow: hidden;
}

@media (min-width: $screen-md-min) {
  .ctas__flexslider__container {
    padding-left: 15px !important; 
    padding-right: 5px !important;
  }
}

@media (min-width: $screen-sm-min) {
  .custom-bt-browse-sections {
    margin-left: 10px;
    margin-bottom: 30px;
    .stripe__title {
      margin-bottom: 30px;
    }
  }

  #widget-calendar {
    .fc-day-number:hover {
      background-color: $orange;
    }
  }
}

@media (max-width: $screen-sm-min) { 
  .iframe-stripe-container {
    .main-row {
      padding: 0;
    }
    .content-preview__item-panel {
      height: 186px !important;
      min-height: 0;
      margin-bottom: 42px;
    }
    .content-preview__title, .content-preview__title--press {
      font-size: 12px;
      line-height: 14px;
    }
    .relateds-flexslider-col {
      padding: 0;
    }
  }

  .cookies-footer__description {
    font-size: 11px;
    line-height: 13px;
  }

  .stripe-contents {
    padding-left: 0;
    padding-right: 0;
  }

  .cta__evidence-banner {
    margin-bottom: 15px;
  }

  .right-logo, .left-logo {
    margin-bottom: 15px; 
    max-width: none;
    width: 100%;
    border: 1px solid #eee;
  }
  
  .body-imprese{ 
    .navbar-header{
      background-color: $blue;
      background-image: url("<%= asset_path('intesa_expo/texture.png') %>");
    }
    .navbar__logo{
      max-width: 100px;
    }
    
    .navbar-inverse .navbar-toggle{
      border-color: #fff;
      color: #fff;
    }
    
    .navbar-inverse .navbar-toggle:hover{
      background-color: $lightblue;
    }
  }
  
  #widget-calendar {
    .fc-day-number {
      height: 30px;
      line-height: 30px;
    }
  }

  .ctas__flexslider__container, .body-imprese .ctas__flexslider__container { 
    padding: 0 !important;
    .ctas__flexslider {
      margin-bottom: 0 !important;
    }
  }

  .browse-sections {
    #widget-calendar {
      margin-top: 0;
      margin-left: 0;
      margin-bottom: 30px;
      padding: 10px;
    }
  }

  .flex-direction-nav {
    display: none !important;
  }

  .main-row, .main-row__evidence, .browse-sections .main-row {
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
  }
  
  .view-all-link{
    float: none;
    font-size: 18px;
    line-height: inherit;
    margin-bottom: 15px;
    position: relative;
  }
}