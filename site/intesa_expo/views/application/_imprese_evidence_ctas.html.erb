<div class="container">
  <div class="row main-row__evidence">
    <!-- SLIDER START -->
    <div class="col-sm-12 ctas__flexslider__container" style="padding-left: 0; padding-right: 0;" ng-if="aux.calltoaction_evidence_info">
      <div class="flexslider ctas__flexslider">
        <ul class="slides">
          <li ng-repeat="calltoaction in aux.calltoaction_evidence_info" class="filters__flexslider-item">
            <%= light_link_to("/call_to_action/{{calltoaction.slug}}", style: "text-decoration: none;" ) do %>
              <div class="row">
                <div class="col-xs-12 ctas__flexslider__img-container">
                  <img style="width: 100%" ng-src="{{calltoaction.thumb_url}}">
                </div>
                <div class="col-xs-12 ctas__info">
                  <div class="ctas__info--bottom">
                    <p class="ctas__flexslider__title">{{calltoaction.title}}</p>
                    <p class="ctas__flexslider__description hidden-xs" ng-if="calltoaction.extra_fields.start"><span class="fa fa-calendar-o"></span> <span class="ctas__flexslider__extra-field">{{formatDate(calltoaction.extra_fields.start, aux.language)}}</span></p>
                    <p class="ctas__flexslider__description hidden-xs" ng-if="calltoaction.extra_fields.start"><span class="fa fa-clock-o"></span> <span class="ctas__flexslider__extra-field">{{extractTimeFromDate(calltoaction.extra_fields.start)}}</span></p>
                    <p class="ctas__flexslider__description hidden-xs" ng-if="calltoaction.extra_fields.guests"><span class="fa fa-user"></span> <span class="ctas__flexslider__extra-field">{{calltoaction.extra_fields.guests}}</span></p>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('.ctas__flexslider').flexslider({
      animation: "fade",
      slideshow: false,
      animationLoop: true,
      touch: true,
      itemWidth: "100%",
      itemMargin: 0,
      controlNav: true,
      directionNav: true,
      prevText: "",
      nextText: ""
    });
  });
</script>