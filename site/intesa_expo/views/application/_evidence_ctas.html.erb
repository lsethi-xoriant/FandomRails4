<div class="container">
  <div class="row main-row__evidence">
    <!-- SLIDER START -->
    <div class="col-sm-9 ctas__flexslider__container" style="padding-left: 0; padding-right: 0;" ng-if="aux.calltoaction_evidence_info">
      <div class="flexslider ctas__flexslider">
        <ul class="slides">
          <li ng-repeat="calltoaction in aux.calltoaction_evidence_info" class="filters__flexslider-item">
            <a href="{{linkTo(calltoaction.detail_url)}}" style="text-decoration: none;">
              <div class="row">
                <div class="col-xs-12 ctas__flexslider__img-container">
                  <img style="width: 100%" ng-src="{{calltoaction.thumb_wide_url}}">
                </div>
                <div class="col-xs-12 ctas__info">
                  <div class="ctas__info--bottom">
                    <p class="ctas__flexslider__title">{{calltoaction.title}}</p>

                    <div ng-if="getFirstIcalInteractionForContent(calltoaction)">
                      <p class="ctas__flexslider__description hidden-xs"><span class="fa fa-calendar-o"></span> <span class="ctas__flexslider__extra-field">{{getFirstIcalInteractionForContent(calltoaction)[3]}}</span></p>
                      <p class="ctas__flexslider__description hidden-xs"><span class="fa fa-clock-o"></span> <span class="ctas__flexslider__extra-field">{{getFirstIcalInteractionForContent(calltoaction)[2]}}</span></p>
                      <p class="ctas__flexslider__description hidden-xs"><span class="fa fa-user"></span> <span class="ctas__flexslider__extra-field">{{calltoaction.extra_fields.guests}}</span></p>
                    </div>

                  </div>
                </div>
              </div>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <!-- SLIDER END -->
    <div class="col-sm-3 cta__evidence-calendar text-center">
      <%= render partial: "/calendar/widget-calendar" %>
    </div>
    <div class="col-sm-3 cta__evidence-banner">
      <a href="{{aux.assets['banner_url_1_' + aux.language]}}">
        <div class="cta__evidence-banner__img">
          <img ng-src="{{aux.assets['banner_img_1_' + aux.language].url}}">
        </div>
      </a>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    buildCalendar();
  });

  function buildCalendar() {

    $('#widget-calendar').fullCalendar({
      header: {
        left: 'prev',
        center: 'title',
        right: 'next'
      },
      dayClick: function(date, jsEvent, view ) {
        window.location.href = "/<%= get_intesa_property %>/calendar/" + date.format("DD-MM-YYYY")
      },
      height: "auto",
      lang: "<%= $context_root || 'it' %>",
      editable: false,
      disableResizing: true
    });

  }
</script>

<script type="text/javascript">
  $(document).ready(function() {
    $('.ctas__flexslider').flexslider({
      animation: "fade",
      slideshow: false,
      animationLoop: true,
      touch: true,
      itemWidth: "100%",
      itemMargin: 0,
      controlNav: true,
      directionNav: true,
      prevText: "",
      nextText: ""
    });
  });
</script>