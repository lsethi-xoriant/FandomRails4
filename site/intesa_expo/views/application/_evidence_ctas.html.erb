<div class="container main-container">
  <div class="row main-row__evidence">
    <!-- SLIDER START -->
    <div class="col-sm-9 ctas__flexslider__container" style="padding-left: 0; padding-right: 0;" ng-if="aux.calltoaction_evidence_info">
      <div class="flexslider ctas__flexslider">
        <ul class="slides">
          <li ng-repeat="calltoaction in aux.calltoaction_evidence_info" class="filters__flexslider-item">
            <%= light_link_to("/call_to_action/{{calltoaction.slug}}", style: "text-decoration: none;" ) do %>
              <div class="col-xs-12 cta-cover__thumbnail-column">
                <img class="cta-cover__thumbnail" ng-src="{{calltoaction.thumb_url}}">
              </div>
              <div class="col-xs-12 ctas__info">
                <p class="ctas__flexslider__title">{{calltoaction.title}}</p>
                <p class="ctas__flexslider__description" ng-bind-html="calltoaction.description | cut:true:70"></p>
              </div>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <!-- SLIDER END -->
    <div class="col-sm-3 cta__evidence-banner">
      <a href="{{aux.assets.banner_url_1}}">
        <div class="cta__evidence-banner__img">
          <img ng-src="{{aux.assets.banner_img_1.url}}">
        </div>
      </a>
    </div>
    <div class="col-sm-3 cta__evidence-calendar">
      <div id="widget-calendar"></div>    
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    buildCalendar();
  });

  function buildCalendar() {

    $('#widget-calendar').fullCalendar({
      header: {
        left: 'prev',
        center: 'title',
        right: 'next'
      },
      dayClick: function(date, jsEvent, view ) {
        window.location.href = "/<%= get_intesa_property %>/calendar/" + date.format("DD-MM-YYYY")
      },
      height: "auto",
      lang: "<%= $context_root || 'it' %>",
      editable: false,
      disableResizing: true
    });

  }
</script>

<script type="text/javascript">
  $(document).ready(function() {
    $('.ctas__flexslider').flexslider({
      animation: "fade",
      slideshow: false,
      animationLoop: true,
      touch: true,
      itemWidth: "100%",
      itemMargin: 0,
      controlNav: true,
      directionNav: false,
      prevText: "",
      nextText: ""
    });
  });
</script>