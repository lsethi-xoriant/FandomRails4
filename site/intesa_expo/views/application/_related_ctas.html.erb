<div class="row cta__related__right-bar <%= top_class %>" ng-if="aux.relateds.contents">
  <div class="col-sm-12">
    <h2 class="cta__related__title">{{aux.assets["relateds_title_" + aux.language]}}</h2>
  </div>
  <div class="col-xs-12" ng-repeat="content in aux.relateds.contents" ng-if="content.type == 'cta'" style="margin-bottom: 10px;">
    <div class="row">
      <div class="col-xs-12">
        <a ng-href="{{linkToValidFrom(content)}}" class="cta__related__a">      

          <%= render partial: "/application/content_preview_content_type" %>

          <img class="cta__related__img" ng-src="{{content.thumb_url}}" style="width: 100%;">

          <p class="cta__related__title-content">
            <span class="cta__related__type" ng-if="(content.media_type == 'IMAGE' || hasPhotoGallery(content)) && isContentValid(content) && !getFirstIcalInteractionForContent(content)">{{aux.assets["photo_" + aux.language]}}</span>
            <span class="cta__related__type" ng-if="(content.media_type == 'YOUTUBE' && isContentValid(content)) && !getFirstIcalInteractionForContent(content)">VIDEO</span>
            <span class="cta__related__type" ng-if="getFirstIcalInteractionForContent(content)">{{aux.assets["event_" + aux.language]}}</span>
            <span class="cta__related__type" ng-if="!isContentValid(content)">COMING SOON</span>
            {{content.title | cut:true:70}}
          </p>

        </a>
      </div>
      <div class="col-xs-12">
        <hr class="cta__related__hr">
      </div>
    </div>
  </div>
</div>