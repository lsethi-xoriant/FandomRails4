<div class="container hidden-xs">
  <div class="row main-row">
    <div class="col-sm-4">  
      <a href="{{aux.assets['left_logo_url_' + aux.language]}}" target="_blank">
        <img class="left-logo" ng-src="{{aux.assets['left_logo_' + aux.language].url}}">  
      </a>  
    </div>
    <div class="col-sm-4 text-center">
      <a href="/<%= $context_root %>">  
        <img class="center-logo" ng-src="{{aux.assets['logo_' + aux.language].url}}">   
      </a>
    </div>
    <div class="col-sm-4 text-right">     
      <a href="{{aux.assets['right_logo_url_' + aux.language]}}" target="_blank">
        <img class="right-logo" ng-src="{{aux.assets['right_logo_' + aux.language].url}}">
      </a>     
    </div>
  </div>
</div>

<div class="navbar__container-fluid hidden-xs">
  <div class="container navbar__container">
    <nav class="navbar navbar-default">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-nav-center">
          <li ng-class="{'active': (menu_field == menu_item.name)}" ng-repeat="menu_item in aux.menu_items">
            <a href="{{menu_item.browse_url}}">
              <p class="navbar__item-text">{{menu_item.title}}</p>
            </a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li ng-class="{'active': ('search' == aux.page_tag.miniformat.name)}" class="navbar__language">
	          <a href="javascript:void(0);" ng-click="showSearch();">
	            <p class="navbar__item-text"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></p>
	          </a>
	        </li>
          <li ng-class="{'active': ('it' == aux.language)}" class="navbar__language" ng-if="aux.language != 'imprese'">
            <a href="/it">
              <p class="navbar__item-text">it</p>
            </a>
          </li>
          <li ng-class="{'active': ('en' == aux.language)}" class="navbar__language" ng-if="aux.language != 'imprese'">
            <a href="/en">
              <p class="navbar__item-text">en</p>
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</div>

<nav class="navbar navbar-inverse visible-xs">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed bnt__menu" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
        <span class="navbar-inverse__menu">MENU</span>
      </button>
      <div class="text-center">
        <img class="cnavbar__logo" ng-src="{{aux.assets['logo_' + aux.language].url}}">
      </div>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
      <ul class="nav navbar-nav navbar-right">
        <li ng-class="{'active': (menu_field == menu_item.name)}" ng-repeat="menu_item in aux.menu_items">
          <a href="{{menu_item.browse_url}}">
            <p class="navbar__item-text">{{menu_item.title}}</p>
          </a>
        </li>
        <hr style="margin-top: 5px; margin-bottom: 5px;">
        <li ng-class="{'active': ('search' == aux.page_tag.miniformat.name)}" class="navbar__language">
          <a href="javascript:void(0);" ng-click="showSearch();">
            <p class="navbar__item-text"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></p>
          </a>
        </li>
        <li ng-class="{'active': ('it' == aux.language)}" class="navbar__language">
          <a href="/it">
            <p class="navbar__item-text">it</p>
          </a>
        </li>
        <li ng-class="{'active': ('en' == aux.language)}" class="navbar__language">
          <a href="/en">
            <p class="navbar__item-text">en</p>
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

