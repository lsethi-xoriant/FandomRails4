<div class="share-interaction__title">
  <p ng-if="aux.language == 'it'">CONDIVIDI</p>
  <p ng-if="aux.language == 'en'">SHARE</p>
</div>

<div class="btn-group blocks">
  <!-- FACEBOOK -->   
  <button ng-if="interaction_info.interaction.resource.providers.facebook" class="btn btn-provider" ng-click="shareWith(calltoaction_info, interaction_info, 'facebook')"><i class="fa fa-facebook"></i></button>

  <!-- TWITTER -->   
  <button ng-if="interaction_info.interaction.resource.providers.twitter" class="btn btn-provider" ng-click="shareWith(calltoaction_info, interaction_info, 'twitter')"><i class="fa fa-twitter"></i></button>

  <!-- LINKEDIN -->   
  <button ng-if="interaction_info.interaction.resource.providers.linkedin" class="btn btn-provider" ng-click="shareWith(calltoaction_info, interaction_info, 'linkedin')"><i class="fa fa-linkedin"></i></button>
</div>
  
