<% content_for :body_class, "small-body" %>

<div class="small-container small-container--padding">

  <%= render partial: "/application/navbar" %>

  <div class="container form-container">
    <div class="row">
      <div class="col-sm-5 col-sm-offset-1">
        <h1 class="devise-title">Registrati</h1>
      </div>
      <div class="col-sm-5 text-right">
        <p class="devise-next-title"><a href="/users/sign_in">Loggati</a></p>
      </div>
      <div class="col-sm-10 col-sm-offset-1">
        <hr class="devise-title-hr">
      </div>
      <% if resource.errors.any? %>
      <div class="col-sm-10 col-sm-offset-1 devise-errors">
        <p>Errori nella compilazione del modulo:</p>
        <ul>
          <% resource.errors.full_messages.each do |error_message| %>
            <li><%= error_message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="col-sm-12">
        <div class="row">
          <div class="col-sm-4 col-sm-offset-4">
            <a href="/auth/facebook_<%= request.site.id %>" class="btn btn-facebook-default btn-block btn-lg"><span style="position: absolute; left: 30px; font-size: 24px;" class="fa fa-facebook"></span>ENTRA CON FACEBOOK</a>
          </div>
          <div class="col-sm-4 col-sm-offset-4 text-center">  
            <p style="margin-bottom: 25px; margin-top: 25px;">oppure</p>
          </div>
          <div class="col-sm-4 col-sm-offset-4">
            <%= form_for resource, url: user_registration_path, html: { method: "post" } do |f| %> 
              
              <div class="form-group">
                <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
              </div>
              <div class="checkbox text-left">
                <label><%= f.check_box :privacy %> Accetto i <a href="/privacy_policy" target="_blank">termini d'uso</a></label>
              </div>

              <button style="margin-top: 25px;" type="submit" class="btn btn-green btn-lg btn-block">Registrami</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
