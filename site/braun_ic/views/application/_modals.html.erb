<div class="modal fade" id="modal-update-user" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Profilo</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-3 text-center">
            <a class="needsclick" ng-click="propagateClickOnFileUploadInput()" style="position: relative; display: inline-block;">
              <img class="modal-update-user__avatar" ng-if="form_data.current_user._avatar[0].dataUrl != null" ng-src="{{form_data.current_user._avatar[0].dataUrl}}">
              <img class="modal-update-user__avatar modal-update-user__avatar--rounded" ng-if="form_data.current_user._avatar[0].dataUrl == null" ng-src="{{form_data.current_user.avatar}}">
              <span class="modal-update-user__pencil fa fa-pencil"></span>
            </a>
          </div>
          <div class="col-sm-9">
            <div ng-if="form_data.current_user.errors">
              <p>Errori nella compilazione:</p>
              <ul>
                <li ng-repeat="error in form_data.current_user.errors">{{error}}</li>
              </ul>
            </div>

            <div class="form-group">
              <input name="first_name" ng-model="form_data.current_user.first_name" class="form-control" placeholder="Nome"></input>
            </div>
            <div class="form-group">
              <input name="last_name" ng-model="form_data.current_user.last_name" class="form-control" placeholder="Cognome"></input>
            </div>
            <div class="form-group hidden">
              <input id="upload-input" name="form_data.current_user._avatar" ng-file-select="" ng-model="form_data.current_user._avatar" class="form-control" type="file" ng-file-change="generateThumb(form_data.current_user._avatar[0])">
            </div>
            <button class="btn btn-green modal-update-user__btn" ng-click="updateUserWithAvatar()">AGGIORNA</button>
          </div>    
        </div>
      </div>
    </div>
  </div>
</div>

