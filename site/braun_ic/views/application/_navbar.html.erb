<div class="container">
  <div class="row">
    <div class="col-sm-12 navbar-default__container">
      <nav class="navbar navbar-default">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><h1 class="title"><img ng-src="{{aux.assets.extra_fields.logo.url}}" alt="{{aux.seo_title}}"></h1></a>
          <a ng-if="isAnonymousUser()" href="/users/sign_up" class="btn btn-green iw_btn-navbar visible-xs">
            REGISTRATI
          </a>
          <a ng-if="current_user.registration_fully_completed && !isAnonymousUser()" ng-click="openInstantWinModal()" class="btn btn-green iw_btn-navbar visible-xs">
          <div class="iw_btn-navbar__tk text-center">{{current_user.instantwin_tickets_counter}}</div>
            GIOCA
          </a>
          <a ng-if="!current_user.registration_fully_completed && !isAnonymousUser()" ng-click="openRegistrationModalForInstantWin(<%= user_for_registation_form().to_json %>)" class="btn btn-green iw_btn-navbar visible-xs">
            <div class="iw_btn-navbar__tk text-center">{{current_user.instantwin_tickets_counter}}</div>
            GIOCA
          </a>
        </div>

        <div id="navbar-collapse" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li ng-repeat="item in aux.menu_items" ng-class="{'active': (aux.tag_menu_item == item.name)}">
              <a ng-if="isAnchor(item.extra_fields.url)" href="javascript: void(0)" ng-click="scrollTo(item.extra_fields.url)">{{item.title}}</a>
              <a ng-if="!isAnchor(item.extra_fields.url)" href="{{item.extra_fields.url}}">{{item.title}}</a>
            </li>
            <li class="navbar-item--socials" ng-if="aux.assets.extra_fields.menu_item_socials" ng-bind-html="aux.assets.extra_fields.menu_item_socials">
            </li>
            <li class="visible-xs" ng-if="current_user">
              <a href="/users/sign_out">Esci</a>
            </li>
          </ul>
        </div>

      </nav>
    </div>
  </div>
</div>
  
     
      