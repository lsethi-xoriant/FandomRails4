<script type="text/javascript" src="http://navbar.disneyinternational.com/it/03/navbar.js"></script>

<%= render partial: "/application/modals" %>

<div class="container">
  <div class="row">
    <div class="col-md-12 text-center" style="padding: 0;">
      <div class="adv__horizontal">
        <p>PUB</p>
        <script type="text/javascript" language="javascript">
          dimgAd.display("728x90");
        </script>
      </div>
    </div>
  </div>
</div>

<div class="container properties__container hidden-xs" style="border-top: 10px solid {{aux.current_property_info.background}};">
  <div class="row text-center">
    <%= render partial: "/application/properties" %>
  </div>
</div>

<div class="container main-menu__container hidden-xs">
  <div class="row main-menu__row">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="<%= "active" if "#{controller_name}##{action_name}" == "application#index" %>"><a href="/<%= $context_root %>">Home</a></li>
            <li class="<%= "active" if "#{controller_name}##{action_name}" == "reward#index" %>">
              <%= light_link_to("/reward/catalogue") do %>
                Premi
              <% end %>
            </li>
            <li class="<%= "active" if "#{controller_name}##{action_name}" == "profile#rankings" %>">
              <%= light_link_to("/profile/rankings") do %>
                Classifiche
              <% end %>
            </li>
            <li class="<%= "active" if "#{controller_name}##{action_name}" == "browse#index" %>">
              <%= light_link_to("/browse") do %>
                Cerca
              <% end %>
            </li>
            <li class="<%= "active" if "#{controller_name}##{action_name}" == "registrations#edit" %>">
              <%= light_link_to("/profile") do %>
                Profilo
              <% end %>
            </li>
            <% if aux["current_property_info"] && aux["current_property_info"]["outer"] && aux["current_property_info"]["outer-url"] %>
              <li>
                <a href="<%= aux["current_property_info"]["outer-url"] %>"><%= aux["current_property_info"]["outer"] %></a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>

<nav class="navbar navbar-inverse visible-xs">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="navbar-inverse__menu">MENU</span>
      </button>
      <div class="text-center">
        <img class="navbar__logo" ng-src="{{aux.current_property_info.logo}}">
      </div>
      <%= light_link_to("/profile") do %>
        <div ng-if="current_user && current_user.notifications > 0" class="properties__right-bar-notifications text-center">
          {{current_user.notifications}}
        </div>

        <img ng-src="{{current_user.avatar}}" class="navbar__avatar" ng-if="current_user">
        <img src="<%= anon_avatar() %>" class="navbar__avatar" ng-if="!current_user">
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li class="<%= "active" if "#{controller_name}##{action_name}" == "application#index" %>"><a href="/<%= $context_root %>">Home</a>
        </li>
        <li class="<%= "active" if "#{controller_name}##{action_name}" == "reward#index" %>">
          <%= light_link_to("/reward/catalogue") do %>
            Premi
          <% end %>
        </li>
        <li class="<%= "active" if "#{controller_name}##{action_name}" == "profile#rankings" %>">
          <%= light_link_to("/profile/rankings") do %>
            Classifiche
          <% end %>
        </li>
        <li class="<%= "active" if "#{controller_name}##{action_name}" == "browse#index" %>">
          <%= light_link_to("/browse") do %>
            Cerca
          <% end %>
        </li>
        <li class="<%= "active" if "#{controller_name}##{action_name}" == "registrations#edit" %>">
          <%= light_link_to("/profile") do %>
            Profilo
          <% end %>
        </li>
        <% if aux["current_property_info"] && aux["current_property_info"]["outer"] && aux["current_property_info"]["outer-url"] %>
          <li>
            <a href="<%= aux["current_property_info"]["outer-url"] %>"><%= aux["current_property_info"]["outer"] %></a>
          </li>
        <% end %>
        <hr style="margin-top: 5px; margin-bottom: 5px;">
        <li ng-repeat="property in aux.property_info">
          <a href="/{{property.path}}">
            {{property.title}}
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>