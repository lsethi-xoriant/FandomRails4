<div class="col-sm-12 text-center visible-xs">
  <p ng-if="!interaction_info.user_interaction" class="vote-interaction__title">{{interaction_info.interaction.resource.title}}</p>
  <p ng-if="interaction_info.user_interaction" class="vote-interaction__title">Il tuo voto è:</p>
</div>

<div class="vote-interaction__baloon-container" ng-class="{'vote-interaction__done': interaction_info.user_interaction, 'vote-interaction__active': !interaction_info.user_interaction}">

  <p ng-if="!interaction_info.user_interaction" class="vote-interaction__title hidden-xs">{{interaction_info.interaction.resource.title}}</p>
  <p ng-if="interaction_info.user_interaction" class="vote-interaction__title hidden-xs">Il tuo voto è:</p>

  <div class="vote-interaction__baloon text-center">
    <div ng-repeat="i in range(interaction_info.interaction.resource.vote_info.min, interaction_info.interaction.resource.vote_info.max)" class="vote-interaction__baloon__element">
      <!-- NOT DONE -->
      <div  ng-if="!interaction_info.user_interaction" class="vote-interaction__baloon__element-pin" ng-click="updateAnswer(calltoaction_info, interaction_info, i, interaction_info.interaction.when_show_interaction)" ng-class="{'vote-interaction__baloon__element-pin__active': (evaluateVote(interaction_info) >= i)}">
        <p>{{i}}</p>
      </div>
      <!-- ALREAY DONE -->
      <div  ng-if="interaction_info.user_interaction" class="vote-interaction__baloon__element-pin" ng-class="{'vote-interaction__baloon__element-pin__active': (evaluateVote(interaction_info) >= i)}">
        <p>{{i}}</p>
      </div>
    </div>
  </div>

  <div ng-if="interaction_info.user_interaction && interaction_info.user_interaction.outcome && interaction_info.status.winnable_reward_count > 0" class="row vote-interaction__reward">
    <div class="col-md-12 play-interaction__winnable-reward text-center">
      <span class="label label-success cta-cover__winnable-reward__label">
        Fatto <span class="cta-cover__glyphicon-icon glyphicon glyphicon-ok">
      </span> 
    </div>
  </div>
  <div ng-if="!interaction_info.user_interaction && interaction_info.status.winnable_reward_count > 0" class="row text-center vote-interaction__reward">
    <div class="col-md-12 play-interaction__winnable-reward">
      <span class="label label-warning cta-cover__winnable-reward__label">
        +{{interaction_info.status.winnable_reward_count}}<span class="cta-cover__glyphicon-icon fa fa-star">
      </span>
    </div>
  </div>

</div>