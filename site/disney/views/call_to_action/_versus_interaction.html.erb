<div class="col-xs-12 text-center">
  <p class="versus-interaction__question">{{interaction_info.interaction.resource.question}}</p>
</div>
<div ng-if="interaction_info.user_interaction && currentUserEmptyAndAnonymousInteractionEnable()" class="row">
  <div class="col-md-12 text-center">
    <p>Registrati per fare valere il tuo voto.</p>
  </div>
</div>
<div class="row">
  <div ng-repeat="answer in interaction_info.interaction.resource.answers">
    <div class="col-xs-6">
      <div class="versus-interaction__vs--undervideo" ng-if="$index % 2 == 0">VS</div>
      <%= render partial: "/call_to_action/versus_answer" %>
    </div>
  </div>
</div>