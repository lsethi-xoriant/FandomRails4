<div class="row profile-bar">
	<div class="col-sm-3 no-border">
	  <div class="text-center" style="padding-top: 23px;">
	  	<img src="<%= user_avatar current_user %>" alt="profile img" class="img-circle img-profile">
	  	<h4 style="font-weight: bold;"><%= "#{current_user.first_name} #{current_user.last_name}" %> <a href="/users/rai/sign_out" target="_top"><span class="glyphicon glyphicon-off" style="font-size: 14px; padding-left: 10px; color: #777C87;"></span></a></h4>
	  </div>
	</div>
	<div class="col-sm-3">
		<% superfan = get_superfan_reward %>
		<div class="text-center" style="padding-top: 10px;">
			<% if superfan %>
				<img src="<%= get_reward_image_for_status(superfan) %>" alt="profile img" class="img-circle" style="max-width: 130px;">
				<% if superfan.cost.present? %>
					<div class="progress" style="margin: 8px auto; width: 30%;">
				    	<div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: <%= (get_reward_points_in_period(PERIOD_KIND_WEEKLY, MAIN_REWARD_NAME) * 100) / superfan.cost %>%;"></div>
			    	</div>
		    	<% end %>
			    <h4 style="text-transform: uppercase; font-weight: bold;"><%= superfan.title.upcase %></h4>
		    <% else %>
		    	<img src="<%= asset_path("badge_placeholder.png") %>" class="img-circle" style="max-width: 130px;" />
		    	<h4 style="text-transform: uppercase; font-weight: bold;">SUPERFAN</h4>
		    	<h4>Dal 4 ottobre</h4>
		    <% end %>
	  </div>
	</div>
	<div class="col-sm-3">
		<div class="text-center">
			<p style="margin: 0;"><span class="contents-to-unlock"><%= get_unlocked_contents %></span><i class="fa fa-lock fa-4" style="font-size: 80px;"></i></p>
			<h4 style="margin: 0;">CONTENUTI ESCLUSIVI<br />da sbloccare</h4>
		</div>
	</div>
	<div class="col-sm-3 ranking-info">
		<span class="label-warning"><%= get_counter_about_user_reward(MAIN_REWARD_NAME) %> <span class="glyphicon glyphicon-star" style="padding-left: 5px; font-size: 25px;"></span></span>
		<h4>PUNTI TOTALI</h4>
		<span class="label-default">
			<% if get_my_general_position %>
				<%= get_my_general_position %>Â°
			<% else %>
				---
			<% end %>
		</span>
		<h4>CLASSIFICA</h4>
	</div>
</div>