<div class="col-sm-12">
  <div class="row text-center">
    <div id="calltoaction-<%= calltoaction.id %>-countdown" class="col-sm-12" style="padding-top: 15px;">
      <h3></h3>
    </div>
    <div class="col-sm-12" style="padding-top: 15px; min-height: 260px;">
      <h4 style="font-size: 16px;">
        <% if quiz_interactions.count > 1 %>
          <h3>Completa la sfida</h3>
        <% else %>
          <h3>Rispondi alla domanda</h3>
        <% end %>
      </h4>
    </div>
    <div class="col-sm-12 text-center">
      <h5>
        <p>Ottieni fino a +<%= calltoaction_reward_status[:winnable_reward_count] %> punti</p>
        <% unless calltoaction_reward_status[:reward].numeric_display %>    
            <% calltoaction_reward_status[:reward_status_images].each do |reward| %>
                <img src="<%= reward %>" style="max-width: 30px;">
            <% end %>
        <% end %>
      </h5>
    </div>
  </div>
</div>