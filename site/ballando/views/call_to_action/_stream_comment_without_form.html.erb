<hr style="margin-top: 0; margin-bottom: 0;">
<div class="panel-footer">
  <div class="comment-section home-comment-section">   
    <% calltoaction_comment_interaction[:comments_to_shown][0..1].each do |user_comment| %>
      
      <div class="row comment">
        <div class="col-xs-1" style="padding-right: 0; width: 40px;">
          <img src="<%= user_avatar user_comment.user %>" alt="..." class="img-circle img-responsive img-profile">
        </div>
        <div class="col-xs-11 text-left">
          <h6 style="text-transform: none;"><span><%= user_comment.user ? "#{ user_comment.user.first_name } #{ user_comment.user.last_name }" : "Anonimo" %></span> - <span style="color: #999"><%= user_comment.text %></span></h6>
        </div>
      </div>

    <% end %>
  </div>
</div>
