<% quiz_interactions = always_shown_interactions(calltoaction) %>

<div class="row cta">      
  <div class="col-lg-10 col-lg-offset-1 col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-0">
    <div class="panel panel-default cta-page cta-stream panel-shadow" style="position: relative;">

      <% if is_cta_locked(calltoaction) %>
      	<%= render partial: "/call_to_action/cover_stream_single_calltoaction_locked", locals: { calltoaction: calltoaction } %>
      <% else %>
      	<%= render partial: "/call_to_action/cover_stream_single_calltoaction", locals: { calltoaction: calltoaction } %>
      
        <div class="panel-body panel-card">   
          <div class="row cta-md">
            <!-- LEFT COLUMN WITH IMAGE -->
            <%= render partial: "/call_to_action/stream_single_calltoaction_media", locals: { calltoaction: calltoaction } %>

            <!-- RIGHT COLUMN WITH NAME AND DESCRIPTION -->
            <%= render partial: "/call_to_action/stream_single_calltoaction_interactions", locals: { calltoaction: calltoaction, quiz_interactions: quiz_interactions } %>
          </div>
        </div>
      
      <% end %>
      
    </div>
    
    <div class="row">
	    <div class="col-sm-3 col-xs-6" id="bottom-feedback-share-<%= calltoaction.id %>">
	    <% user_interaction, interaction = has_done_share_interaction(calltoaction) %>
	    <% if interaction %>
			<% if user_interaction %>
				<button id="button-share-cta" class="btn-2 btn-2-small" role="button" onclick="openCtaShareModal('facebook-share-modal', this, <%= calltoaction.id %>, '<%= calltoaction.title %>', <%= interaction.id %>, true)" style="padding-top: 5px;">CONDIVIDI</button>
		    	<span id="feedback-label-share" class="label label-success" style="padding-top: 3px;margin-top: 5px;">Fatto <span class="glyphicon glyphicon-ok"></span></span>
		    <% else %>
		    	<button id="button-share-cta" class="btn-2 btn-2-small" role="button" onclick="openCtaShareModal('facebook-share-modal', this, <%= calltoaction.id %>, '<%= calltoaction.title %>', <%= interaction.id %>, false)" style="padding-top: 5px;">CONDIVIDI</button>
		    	<span id="feedback-label-share" class="label label-warning" style="padding-top: 3px;margin-top: 5px;">+3 <span class="glyphicon glyphicon-star"></span></span>
		    <% end %>
		<% end %>
	  <!--
      <div class="col-sm-3 col-sm-offset-6 col-xs-6 text-right">
        <a href="/call_to_action/<%= calltoaction.id %>" class="btn-2 btn-2-small">VEDI</a>
      </div>
      -->
	</div>
  </div>
    
  </div>
</div>