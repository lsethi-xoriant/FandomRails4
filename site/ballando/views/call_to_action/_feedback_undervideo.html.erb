<div class="col-sm-12">
  <div class="row text-center">
    <% if user_interaction %>
      <div class="col-sm-6 col-sm-offset-3" style="padding-top: 70px;">
        <% if user_interaction.answer.correct %>
          <h3 style="color: green;">Risposta<br>corretta!</h3>
        <% else %>
          <h3 style="color: red;">Risposta<br>sbagliata!</h3>
        <% end %>
      </div>
      <div class="col-sm-12" style="padding-top: 25px;">
        <% unless interaction_reward_status[:reward].numeric_display %>    
          <% interaction_reward_status[:reward_status_images].each do |reward| %>
            <img src="<%= reward %>" style="max-width: 30px; margin-bottom: 5px;">
          <% end %>
        <% end %>
      </div>
      <div class="col-sm-6 col-sm-offset-3" style="padding-top: 25px;">
        <h4>Hai ottenuto<br>+<%= interaction_reward_status[:win_reward_count] %> punti</h4>
      </div>
    <% end %>
  </div>
</div>