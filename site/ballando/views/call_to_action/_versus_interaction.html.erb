<div class="col-xs-12 text-center">
  <h3>
    <%= interaction.resource.question %>
  </h3>
</div>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1 text-center">
    <div class="row vs-ixd vs-ixd-x">
      <% position = 0 %>
      <% interaction.resource.answers.each do |answer|%>
        <%= render partial: "/call_to_action/versus_answer", locals: { user_interaction: user_interaction, interaction: interaction, answer: answer, position: position } %>
        <% position += 1 %>
      <% end %>
    </div>
  </div>
  <div class="col-md-1 col-xs-1 text-center"></div>
</div>