<div class="row">
  <div class="col-xs-12 text-center">
    <h5 style="margin: 0 0 0 0px"><%= answer.text %></h5>
  </div>
  <div class="col-xs-12" style="position: relative;">

    <div style="position: absolute; top: 40%; bottom: 0; right: -8px;">
      <p>VS</p>
    </div>

    <div class="progress vertical bottom" style="position: absolute; top: 0; bottom: 0; width: 15px;">
      <div class="progress-bar" role="progressbar" style="height: <%= percent %>%;">
      </div>
    </div>

    <% if enable %>
      <a style="width: 80%; margin-left: 20px; margin-bottom: 0;" href="javascript: void(0)" class="thumbnail" onclick="updateAnswer(<%= interaction.call_to_action.id %>, <%= interaction.id %>, <%= answer.id %>, '<%= interaction.when_show_interaction %>')" onmouseenter="onEnterInteraction(<%= interaction.id %>, <%= answer.id %>)" onmouseleave="onLeaveInteraction(<%= interaction.id %>, <%= answer.id %>)"><img src="<%= answer.image(:medium) %>"></a>
    <% else %>
      <a style="width: 80%; margin-left: 20px; margin-bottom: 0;" href="javascript: void(0)" class="thumbnail" onmouseenter="onEnterInteraction(<%= interaction.id %>, <%= answer.id %>)" onmouseleave="onLeaveInteraction(<%= interaction.id %>, <%= answer.id %>)"><img src="<%= answer.image(:medium) %>"></a>
    <% end %>
    
  </div>
  <div class="col-xs-12 text-center" style="margin-top: 8px; padding-left: 8px;">
 
    <div class="no-pad interaction-baloon" style="width: 30px; float: left;">
      <div class="baloon baloon-top <%= "unchosen square" unless user_answer %>"><img src="<%= current_avatar %>" class="img-responsive <%= "hidden" unless user_answer %>" style="width: 100%; border-radius: 3px;"></div>
    </div>
    <h3><%= percent ? percent : "-" %>%</h3>

  </div>
</div>