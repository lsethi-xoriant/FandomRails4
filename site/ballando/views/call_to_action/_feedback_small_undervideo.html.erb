<% if current_user && user_interaction %>
  <div class="col-xs-12 text-center undervideo-feedback">
    <div class="panel panel-default" style="margin-bottom: 10px;">
      <div class="panel-body" style="padding: 5px;">
        <% if interaction.resource_type.downcase == "quiz" && interaction.resource.quiz_type.downcase == "trivia" %>
          <% if user_interaction.answer.correct %>
            <p style="font-size: 12px; display: inline;"><span style="color: green;" class="glyphicon glyphicon-ok-sign"></span> CORRETTO! +<%= interaction_reward_status[:win_reward_count] %> punti</p>
          <% else %>
            <p style="font-size: 12px; display: inline;"><span style="color: red;" class="glyphicon glyphicon glyphicon-remove-sign"></span> SBAGLIATO! +<%= interaction_reward_status[:win_reward_count] %> punti</p>
          <% end %>
        <% else %>
          <p style="font-size: 12px; display: inline;"><span style="color: green;" class="glyphicon glyphicon-ok-sign"></span> BRAVO! +<%= interaction_reward_status[:win_reward_count] %> punti</p>
        <% end %>
        <% unless interaction_reward_status[:reward].numeric_display %>    
          <% interaction_reward_status[:reward_status_images].each do |reward| %>
            <img src="<%= reward %>" style="max-width: 15px; margin-bottom: 5px;">
          <% end %>
        <% end %>
      </div>
    </div>
    
    <a href="javascript:void(0);" id="interaction-<%= interaction.id %>-next" class="btn-2 btn-2-small" role="button" onclick="nextInteraction(<%= calltoaction_id %>)" style="margin-bottom: 15px; width: 50%;">VAI AVANTI</a>
    <!--
    <div id="interaction-<%= interaction.id %>-next" class="go-on hidden" onclick="nextInteraction(<%= calltoaction_id %>)" style="">VAI AVANTI</div>
    -->
  </div>
<% else %>
  <div class="col-xs-12 text-center undervideo-feedback">
    <h6 style="margin-bottom: 0;">Ottieni fino a +<%= interaction_reward_status[:winnable_reward_count] %> punti</h6>
    <% unless interaction_reward_status[:reward].numeric_display %>  
      <div class="col-sm-12 text-center" style="margin-bottom: 20px;">  
        <% interaction_reward_status[:reward_status_images].each do |reward| %>
            <img src="<%= reward %>" style="width: 15px;">
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>