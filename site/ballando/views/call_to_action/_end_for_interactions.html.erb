<% calltoaction_reward_status = get_current_call_to_action_reward_status(MAIN_REWARD_NAME, calltoaction) %>

<div class="col-sm-12">
  <div class="row text-center cta-stream-heading" style="position: relative;">
    <div class="col-sm-12">
      <h1><span class="glyphicon glyphicon glyphicon-ok-sign"></span></h1>
      <h4>Sfida fatta!</h4>
    </div>
    <div class="col-xs-12 text-center undervideo-feedback">
      <% if calltoaction_reward_status[:winnable_reward_count] > 0 %>
        <h5>Ottieni fino a +<%= calltoaction_reward_status[:winnable_reward_count] %> punti</h5>
      <% else %>
        <h5>Hai ottenuto +<%= calltoaction_reward_status[:win_reward_count] %> punti</h5>
      <% end %>
      <% unless calltoaction_reward_status[:reward].numeric_display %>  
        <div class="col-sm-12 text-center" style="margin-bottom: 10px; float: none;">  
          <% calltoaction_reward_status[:reward_status_images].each do |reward| %>
              <img src="<%= reward %>" style="width: 15px;">
          <% end %>
        </div>
      <% end %>
      <div class="go-on" onclick="restartInteractions(<%= calltoaction.id %>)" style="">RIVEDI LE RISPOSTE</div>
    </div>
  </div>
</div>