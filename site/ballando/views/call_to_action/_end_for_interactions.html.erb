<% calltoaction_reward_status = get_current_call_to_action_reward_status("POINT", calltoaction) %>

<div class="col-sm-12">
  <div class="row text-center">
    <div class="col-sm-12" style="padding-top: 15px; min-height: 240px;">
      <h4 style="font-size: 16px;">
        FINE
      </h4>
    </div>
    <div class="col-sm-12 text-center">
      <h5>
        <p>Ottieni fino a +<%= calltoaction_reward_status[:winnable_reward_count] %> punti</p>
        <% unless calltoaction_reward_status[:reward].numeric_display %>    
            <% calltoaction_reward_status[:reward_status_images].each do |reward| %>
                <img src="<%= reward %>" style="max-width: 30px;">
            <% end %>
        <% end %>
      </h5>
    </div>
    <div class="col-sm-12 text-center">
      <button class="btn btn-warning btn-block" onclick="restartInteractions(<%= calltoaction.id %>)">RIVEDI RISPOSTE</button>
    </div>
  </div>
</div>