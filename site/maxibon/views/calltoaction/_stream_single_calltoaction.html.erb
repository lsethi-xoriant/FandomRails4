<div class="row">      
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-default no-pad">
      <div class="panel-body no-pad">

        <!-- MEDIA -->
        <div class="row">
          <div class="col-md-12">
            <% if calltoaction.media_type == "VIDEO" %>
                <div class="video flex-video widescreen" style="background:#222;">
                  <div id="home-stream-video-<%= calltoaction.id %>" type="<%= type %>" iid="calltoaction-active-<%= calltoaction.id %>"></div>
                  <!-- OVERVIDEO AREA -->
                  <div id="home-overvideo-<%= calltoaction.id %>"></div>
                </div>
            <% else %>
              <img src="<%= calltoaction.image %>" style="width: 100%; margin-bottom: 15px;">
            <% end %>
          </div>
        </div>

        <div class="row">
          
          <div class="col-md-12 text-center">
            <h3 style="margin: 0 0 15px 0;"><%= calltoaction.title %>             
              <div id="circle-calltoaction-done-<%= calltoaction.id %>" class="text-center <%= "hidden" unless calltoaction_done?(calltoaction) %>" style="display: inline-block;">
                <div style="margin-left: 15px; width: 25px; height: 25px;" class="done-overvideo-circle-inline">
                    <span style="font-size: 15px; top: -4px;" class="glyphicon glyphicon-ok"></span>
                </div>
              </div>
            </h3>
          </div>
          <div class="col-sm-12 text-center" id="home-undervideo-<%= calltoaction.id %>">
            <h6 class="default-font">

              <% if calltoaction_except_share_done?(calltoaction) %>
                <span style="margin-right: 5px;">Fatto! +<%= user_points_except_share_for(calltoaction) %> Gratta&Vinci</span>
              <% else %>
                <span style="margin-right: 5px;">Ottieni +<%= calltoactions_totalpoints(calltoaction) %> Gratta&Vinci</span>
              <% end %>
              
              <% user_points_except_share_for(calltoaction).times do %>
                <img class="img-ticket" src="/assets/maxibon/small-ticket.png" style="width: 40px; margin-bottom: 5px;">
              <% end %>
              <% (calltoactions_totalpoints(calltoaction) - user_points_except_share_for(calltoaction)).times do %>
                  <img class="img-ticket" src="/assets/maxibon/small-ticket-gray.png" style="width: 40px; margin-bottom: 5px;">
              <% end %>

            </h6>                  
          </div>

          <div class="col-md-12" id="share-footer">
            <%= render partial: "/call_to_action/share_footer_mobile", locals: { calltoaction: calltoaction } %>
          </div>
        </div>

      </div>         
    </div>        
  </div>
</div>