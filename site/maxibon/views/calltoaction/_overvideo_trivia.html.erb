<!-- OVERVIDEO AREA -->
<div class="overvideo" style="padding-top: 40%; padding-bottom: 50%; position: relative; background-color:rgba(0, 0, 0, 0.5);">
    <div class="overvideo-canvas">
        <div class="overvideo-content">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h4><%= calltoaction_question %></h4>
                    <hr>
                </div>
                <div class="col-md-1 col-xs-1 text-center"></div>
                <div class="col-md-10 col-xs-10 text-center">
                    <div class="row">
                        <% calltoaction_answers.each do |answer|%>
                          <div class="col-md-4 text-center">
                            <a href="javascript: void(0)" onclick="updateTriviaAnswer(<%= interaction_overvideo_end_id %>, <%= answer.id %>)"><img src="<%= answer.image(:thumb) %>" class="img-circle img-responsive" style="margin: 0 auto;"></a>
                            <!--
                            <button type="button" class="btn <%= calltoaction_user_answer == answer.id ? "btn-primary" : "btn-info" %> btn-block" onclick="updateTriviaAnswer(<%= interaction_overvideo_end_id %>, <%= answer.id %>)"><%= answer.text %></button>
                            -->
                          </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>