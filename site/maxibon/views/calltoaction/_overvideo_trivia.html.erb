<!-- OVERVIDEO AREA -->
<div class="overvideo">
    <div class="overvideo-canvas" style="height:420px;">
        <div class="overvideo-content">
            <div class="row">
                <div class="col-md-12 text-center" style="margin-top: 40px;">
                    <h4><%= calltoaction_question %></h4>
                    <hr>
                </div>
                <div class="col-md-1 col-xs-1 text-center"></div>
                <div class="col-md-10 col-xs-10 text-center">
                    <div class="row">
                        <% calltoaction_answers.each do |id, answer|%>
                          <div class="col-md-4">
                              <button type="button" class="btn <%= calltoaction_user_answer == id ? "btn-primary" : "btn-info" %> btn-block" onclick="updateTriviaAnswer(<%= interaction_overvideo_end_id %>, <%= id %>)"><%= answer %></button>
                          </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>