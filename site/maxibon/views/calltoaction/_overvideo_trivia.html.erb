<!-- OVERVIDEO AREA -->
<div class="overvideo overvideo-trivia">
    <div class="overvideo-canvas">
        <div class="overvideo-content">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2 style="color: #fff;"><%= calltoaction_question %></h2>
                </div>
                <div class="col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 text-center" style="margin-top: 15px;">
                    <div class="row">

                        <% calltoaction_answers.each do |answer|%>
                          <div class="col-xs-4 text-center">

                            <!-- DESKTOP VIEW -->
                            <a class="hidden-xs" href="javascript: void(0)" onclick="updateTriviaAnswer(<%= interaction_overvideo_end_id %>, <%= answer.id %>)"><img src="<%= answer.image(:medium) %>" class="img-circle img-responsive img-circle-overvideo" ></a>

                            <!-- MOBILE VIEW -->
                            <a class="hidden-sm hidden-md hidden-lg" href="javascript: void(0)" onclick="updateTriviaAnswer(<%= calltoaction_parent_id %>, <%= interaction_overvideo_end_id %>, <%= answer.id %>)"><img src="<%= answer.image(:medium) %>" class="img-circle img-responsive img-circle-overvideo" ></a>
                            
                            <!-- BUTTON SIMPLE VIEW -->
                            <!-- <button type="button" class="btn <%= calltoaction_user_answer == answer.id ? "btn-primary" : "btn-info" %> btn-block" onclick="updateTriviaAnswer(<%= interaction_overvideo_end_id %>, <%= answer.id %>)"><%= answer.text %></button> -->

                          </div>
                        <% end %>
                    </div>
                </div>
                <div class="hidden-xs col-xs-12 text-center" style="margin-top: 30px;">
                    <h4 style="color: #fff;"><span style="margin-right: 15px;">Rispondi e ottieni <%= interaction_points %> biglietti</span>
                        <% interaction_points.times do |i| %>
                            <img class="img-ticket" src="/assets/maxibon/small-ticket.png">
                        <% end %>
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>