<%= render partial: "/application/user_bar" %>

<div class="container-full">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 cta">
        <div class="panel panel-default cta-page">
          <div class="panel-body">
            <div class="row">
              <div class="col-sm-3 col-xs-1"></div>
              <div class="col-sm-6 col-xs-10 text-center">
                <h4 class="lead">Invia le istruzioni per impostare la nuova password. </h4>
                <p>&nbsp;</p>
                <% if resource.errors.any? %>
                  <div style="margin-top: 10px; margin-bottom: 10px; margin-left: 10px;">
                    <p style="font-size: 15px; color: red;">Errori nella compilazione del modulo:</p>
                    <ul style="color:red;">
                      <% resource.errors.full_messages.each do |error| %>
                        <li><%= error %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
                  <div class="form-group text-left">
                    <!--<label for="exampleInputEmail1">Email address</label>-->
                    <%= f.text_field :email, :class => "form-control", placeholder: "Email" %>
                  </div>
                  <button type="submit" class="btn btn-info btn-lg btn-block">Invia istruzioni</button>
                <% end %>
                <p>&nbsp;</p>
              </div>
              <div class="col-sm-3 col-xs-1"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>


